---
// src/layouts/BlogLayout.astro
import Layout from './Layout.astro';
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';
import Navbar from '../components/Navbar.astro'; 
import Footer from '../components/Footer.astro';  

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, publishDate, updateDate, author, category, tags, image, imageAlt } = post.data;

// Pobierz powiązane artykuły
const allPosts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? data.draft !== true : true;
});

// Filtruj: inna niż obecna, preferuj tę samą kategorię
const otherPosts = allPosts.filter(p => p.slug !== post.slug);
const sameCategoryPosts = otherPosts.filter(p => p.data.category === category);
const differentCategoryPosts = otherPosts.filter(p => p.data.category !== category);

// Wybierz max 2 powiązane: najpierw z tej samej kategorii, potem inne
const relatedPosts = [...sameCategoryPosts, ...differentCategoryPosts]
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 2);

// Format dates
const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('pl-PL', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
};

const formatDateShort = (date: Date) => {
  return new Intl.DateTimeFormat('pl-PL', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  }).format(date);
};

// Reading time estimate (Polish: ~200 words/min)
const content = post.body || '';
const wordCount = content.split(/\s+/).length;
const readingTime = Math.ceil(wordCount / 200);

const getReadingTime = (content: string) => {
  const words = content.split(/\s+/).length;
  return Math.ceil(words / 200);
};

// Schema.org BlogPosting
const schema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": description,
  "image": image ? `https://torweb.pl${image}` : "https://torweb.pl/og-default.jpg",
  "author": {
    "@type": "Person",
    "name": author,
    "url": "https://torweb.pl"
  },
  "publisher": {
    "@type": "Organization",
    "name": "TorWeb.pl",
    "logo": {
      "@type": "ImageObject",
      "url": "https://torweb.pl/logo.png"
    }
  },
  "datePublished": publishDate.toISOString(),
  "dateModified": (updateDate || publishDate).toISOString(),
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `https://torweb.pl/blog/${post.slug}`
  }
};

// Breadcrumbs schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Strona główna",
      "item": "https://torweb.pl"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Blog",
      "item": "https://torweb.pl/blog"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": title,
      "item": `https://torweb.pl/blog/${post.slug}`
    }
  ]
};
---

<Layout 
  title={`${title} | Blog TorWeb.pl`}
  description={description}
  ogImage={image}
>
<Navbar />
  <!-- Schema.org -->
  <script type="application/ld+json" set:html={JSON.stringify(schema)} slot="head" />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} slot="head" />
  
  <main class="pt-32 pb-20">
    <article class="max-w-4xl mx-auto px-4 sm:px-6">
      
      <!-- Breadcrumbs -->
      <nav class="mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center gap-2 text-sm text-muted">
          <li>
            <a href="/" class="hover:text-accent transition-colors">Strona główna</a>
          </li>
          <li class="text-faint">/</li>
          <li>
            <a href="/blog" class="hover:text-accent transition-colors">Blog</a>
          </li>
          <li class="text-faint">/</li>
          <li class="text-heading truncate max-w-[200px]">{title}</li>
        </ol>
      </nav>
      
      <!-- Article Header -->
      <header class="mb-12">
        <!-- Category -->
        <a 
          href={`/blog/kategoria/${category.toLowerCase().replace(/\s+/g, '-')}`}
          class="inline-block px-3 py-1 text-sm font-medium bg-accent/10 text-accent rounded-full hover:bg-accent/20 transition-colors mb-4"
        >
          {category}
        </a>
        
        <!-- Title -->
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-heading leading-tight mb-6">
          {title}
        </h1>
        
        <!-- Meta -->
        <div class="flex flex-wrap items-center gap-4 text-sm text-muted mb-8">
          <!-- Author -->
          <div class="flex items-center gap-2">
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-emerald-500 to-sky-500 flex items-center justify-center text-white font-bold text-sm">
              KL
            </div>
            <div>
              <div class="font-medium text-heading">{author}</div>
              <div class="text-xs text-muted">Właściciel TorWeb.pl</div>
            </div>
          </div>
          
          <span class="text-faint">•</span>
          
          <!-- Date -->
          <div class="flex items-center gap-1.5">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <time datetime={publishDate.toISOString()}>
              {formatDate(publishDate)}
            </time>
          </div>
          
          <span class="text-faint">•</span>
          
          <!-- Reading time -->
          <div class="flex items-center gap-1.5">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>{readingTime} min czytania</span>
          </div>
        </div>
        
        <!-- Featured Image -->
        {image && (
          <div class="relative aspect-video rounded-2xl overflow-hidden bg-elevated mb-8">
            <img 
              src={image} 
              alt={imageAlt || title}
              class="w-full h-full object-cover"
              loading="eager"
            />
          </div>
        )}
        
        <!-- Description / Lead -->
        <p class="text-lg sm:text-xl text-muted leading-relaxed border-l-4 border-accent pl-6 py-2">
          {description}
        </p>
      </header>
      
      <!-- Article Content -->
      <div class="prose prose-lg dark:prose-invert max-w-none
        prose-headings:text-heading prose-headings:font-bold
        prose-h2:text-2xl prose-h2:mt-12 prose-h2:mb-6
        prose-h3:text-xl prose-h3:mt-8 prose-h3:mb-4
        prose-p:text-body prose-p:leading-relaxed
        prose-a:text-accent prose-a:no-underline hover:prose-a:underline
        prose-strong:text-heading prose-strong:font-semibold
        prose-ul:my-6 prose-li:text-body
        prose-ol:my-6
        prose-blockquote:border-accent prose-blockquote:bg-accent/5 prose-blockquote:py-1 prose-blockquote:px-6 prose-blockquote:rounded-r-lg prose-blockquote:not-italic
        prose-code:text-accent prose-code:bg-accent/10 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:before:content-none prose-code:after:content-none
        prose-pre:bg-dark-900 prose-pre:border prose-pre:border-dark-700
        prose-img:rounded-xl prose-img:shadow-lg
        prose-hr:border-theme
      ">
        <slot />
      </div>
      
      <!-- Tags -->
      {tags.length > 0 && (
        <div class="mt-12 pt-8 border-t border-theme">
          <div class="flex flex-wrap items-center gap-2">
            <span class="text-sm text-muted mr-2">Tagi:</span>
            {tags.map(tag => (
              <a 
                href={`/blog/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`}
                class="px-3 py-1 text-sm bg-elevated border border-theme rounded-full text-muted hover:text-accent hover:border-accent transition-colors"
              >
                #{tag}
              </a>
            ))}
          </div>
        </div>
      )}
      
      <!-- Author Box -->
      <div class="mt-12 p-6 sm:p-8 bg-card border border-theme rounded-2xl">
        <div class="flex flex-col sm:flex-row gap-6">
          <div class="w-20 h-20 rounded-2xl bg-gradient-to-br from-emerald-500 to-sky-500 flex items-center justify-center text-white font-bold text-2xl flex-shrink-0">
            KL
          </div>
          <div>
            <h3 class="text-lg font-bold text-heading mb-2">Karol Leszczyński</h3>
            <p class="text-muted mb-4">
              Full-stack developer z 15-letnim doświadczeniem. Specjalizuję się w tworzeniu stron internetowych, 
              sklepów e-commerce i aplikacji webowych z integracjami AI. Pomagam firmom z Torunia i okolic 
              budować skuteczną obecność online.
            </p>
            <div class="flex gap-3">
              <a href="/kontakt" class="text-sm font-medium text-accent hover:underline">
                Skontaktuj się →
              </a>
              <a href="/realizacje" class="text-sm font-medium text-muted hover:text-accent transition-colors">
                Zobacz projekty
              </a>
            </div>
          </div>
        </div>
      </div>
      
      <!-- CTA -->
      <div class="mt-12 p-8 bg-gradient-to-br from-emerald-500/10 to-sky-500/10 border border-accent/20 rounded-2xl text-center">
        <h3 class="text-2xl font-bold text-heading mb-3">
          Potrzebujesz podobnego rozwiązania?
        </h3>
        <p class="text-muted mb-6 max-w-xl mx-auto">
          Skontaktuj się ze mną i porozmawiajmy o Twoim projekcie. 
          Bezpłatna wycena w ciągu 24 godzin.
        </p>
        <a 
          href="/kontakt" 
          class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-emerald-500 to-sky-500 dark:from-neon-green dark:to-neon-blue text-dark-950 font-semibold rounded-xl hover:opacity-90 transition-opacity"
        >
          Darmowa wycena
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
      
    </article>
    
    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <div class="max-w-4xl mx-auto px-4 sm:px-6 mt-16">
        <h2 class="text-2xl font-bold text-heading mb-8">Może Cię zainteresować</h2>
        <div class="grid sm:grid-cols-2 gap-6">
          {relatedPosts.map(relatedPost => (
            <a 
              href={`/blog/${relatedPost.slug}`}
              class="group block bg-card border border-theme rounded-xl overflow-hidden hover:border-accent/50 transition-all duration-300"
            >
              {relatedPost.data.image ? (
                <div class="aspect-video bg-elevated overflow-hidden">
                  <img 
                    src={relatedPost.data.image} 
                    alt={relatedPost.data.imageAlt || relatedPost.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    loading="lazy"
                  />
                </div>
              ) : (
                <div class="aspect-video bg-gradient-to-br from-emerald-500/20 to-sky-500/20 flex items-center justify-center">
                  <span class="text-4xl font-bold text-accent/30">
                    {relatedPost.data.title.substring(0, 2).toUpperCase()}
                  </span>
                </div>
              )}
              <div class="p-5">
                <div class="flex items-center gap-2 mb-3">
                  <span class="px-2 py-0.5 text-xs font-medium bg-accent/10 text-accent rounded">
                    {relatedPost.data.category}
                  </span>
                  <span class="text-xs text-muted">
                    {formatDateShort(relatedPost.data.publishDate)}
                  </span>
                </div>
                <h3 class="text-lg font-bold text-heading mb-2 group-hover:text-accent transition-colors line-clamp-2">
                  {relatedPost.data.title}
                </h3>
                <p class="text-sm text-muted line-clamp-2 mb-3">
                  {relatedPost.data.description}
                </p>
                <div class="flex items-center justify-between text-sm">
                  <span class="text-muted">
                    {getReadingTime(relatedPost.body || '')} min czytania
                  </span>
                  <span class="text-accent font-medium group-hover:translate-x-1 transition-transform">
                    →
                  </span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    )}
    
  </main>
  <Footer />
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>