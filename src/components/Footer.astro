---
const currentYear = new Date().getFullYear();

const footerLinks = {
  services: [
    { name: 'Strony internetowe', href: '/strony-internetowe' },
    { name: 'Sklepy internetowe', href: '/sklepy-internetowe' },
    { name: 'Aplikacje webowe', href: '/aplikacje-webowe' },
    { name: 'Integracje AI', href: '/integracje-ai' },
    { name: 'Automatyzacja', href: '/automatyzacja' },
    { name: 'Migracje sklepów', href: '/migracje-sklepow' },
  ],
  company: [
    { name: 'O nas', href: '/#dlaczego-my' },
    { name: 'Portfolio', href: '/realizacje' },
    { name: 'Proces', href: '/#proces' },
    { name: 'FAQ', href: '/#faq' },
    { name: 'Blog', href: '/blog' },
    { name: 'Kontakt', href: '/kontakt' },
  ],
  technologies: [
    { name: 'Next.js', href: '#' },
    { name: 'React', href: '#' },
    { name: 'Node.js', href: '#' },
    { name: 'TypeScript', href: '#' },
    { name: 'AWS', href: '#' },
    { name: 'Astro', href: '#' },
  ],
  local: [
    { name: 'Strony WWW Toruń', href: '/strony-internetowe' },
    { name: 'Strony WWW Bydgoszcz', href: '/strony-internetowe' },
    { name: 'Sklepy Toruń', href: '/sklepy-internetowe' },
    { name: 'Sklepy Bydgoszcz', href: '/sklepy-internetowe' },
    { name: 'Programista Toruń', href: '/kontakt' },
    { name: 'Programista Bydgoszcz', href: '/kontakt' },
  ]
};
---

<footer class="border-t border-theme bg-elevated">
  <!-- Main Footer -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid md:grid-cols-2 lg:grid-cols-5 gap-12">
      <!-- Brand Column -->
      <div class="lg:col-span-2">
        <a href="/" class="flex items-center gap-3 mb-6">
          <div class="w-10 h-10 rounded-lg bg-gradient-to-br dark:from-neon-green dark:to-neon-blue from-emerald-500 to-sky-500 flex items-center justify-center font-display font-bold text-dark-950 text-lg">
            T
          </div>
          <div class="flex flex-col">
            <span class="font-display font-bold text-xl text-heading">TorWeb<span class="text-accent">.pl</span></span>
            <span class="text-[10px] text-faint font-mono uppercase tracking-widest -mt-1">Agencja Interaktywna</span>
          </div>
        </a>
        
        <p class="text-muted text-sm mb-6 max-w-xs">
          Profesjonalne tworzenie stron internetowych, sklepów e-commerce i aplikacji webowych. 
          15+ lat doświadczenia w digital.
        </p>
        
        <div class="space-y-2 text-sm">
          <a href="tel:+48509370772" class="flex items-center gap-2 text-muted hover:text-accent transition-colors">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            +48 509 370 772
          </a>
          <a href="mailto:kontakt@torweb.pl" class="flex items-center gap-2 text-muted hover:text-accent transition-colors">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            kontakt@torweb.pl
          </a>
          <div class="flex items-center gap-2 text-muted">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            </svg>
            Toruń, Kujawsko-Pomorskie
          </div>
        </div>
      </div>
      
      <!-- Services -->
      <div>
        <h4 class="font-semibold text-heading mb-4">Usługi</h4>
        <ul class="space-y-2">
          {footerLinks.services.map(link => (
            <li>
              <a href={link.href} class="text-sm text-muted hover:text-accent transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Company -->
      <div>
        <h4 class="font-semibold text-heading mb-4">Firma</h4>
        <ul class="space-y-2">
          {footerLinks.company.map(link => (
            <li>
              <a href={link.href} class="text-sm text-muted hover:text-accent transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Technologies -->
      <div>
        <h4 class="font-semibold text-heading mb-4">Technologie</h4>
        <ul class="space-y-2">
          {footerLinks.technologies.map(link => (
            <li>
              <span class="text-sm text-faint">
                {link.name}
              </span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div class="border-t border-theme">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <div class="text-sm text-faint">
          © {currentYear} TorWeb.pl. Wszystkie prawa zastrzeżone.
        </div>
        
        <div class="flex items-center gap-6">
          <a href="/polityka-prywatnosci" class="text-sm text-faint hover:text-muted transition-colors">
            Polityka prywatności
          </a>
          
          <!-- Cookie Settings Button -->
          <button 
            type="button"
            onclick="openCookieSettings()"
            class="text-sm text-faint hover:text-muted transition-colors flex items-center gap-1.5"
          >
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Ustawienia cookies
          </button>
        </div>
        

      </div>
    </div>
  </div>
</footer>