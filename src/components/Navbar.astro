---
import ThemeToggle from './ThemeToggle.astro';

const currentPath = Astro.url.pathname;

const services = [
  { href: '/strony-internetowe', label: 'Strony internetowe', icon: 'web' },
  { href: '/sklepy-internetowe', label: 'Sklepy internetowe', icon: 'cart' },
  { href: '/aplikacje-webowe', label: 'Aplikacje webowe', icon: 'app' },
  { href: '/integracje-ai', label: 'Integracje AI', icon: 'ai' },
  { href: '/automatyzacja', label: 'Automatyzacja', icon: 'auto' },
  { href: '/migracje-sklepow', label: 'Migracje sklepów', icon: 'migrate' },
];

const serviceSlugs = services.map(s => s.href);

const navLinks = [
  { href: '/realizacje', label: 'Portfolio' },  
  { href: '/#proces', label: 'Jak działamy' },
  { href: '/#faq', label: 'FAQ' },
  { href: '/blog', label: 'Blog' },
  { href: '/kontakt', label: 'Kontakt' },
];

const isServicesActive = serviceSlugs.some(slug => currentPath === slug || currentPath === slug + '/');
---

<header id="navbar" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group relative z-[70]">
        <div class="relative">
          <div class="w-10 h-10 rounded-lg bg-gradient-to-br dark:from-neon-green dark:to-neon-blue from-emerald-500 to-sky-500 flex items-center justify-center font-display font-bold text-dark-950 text-lg group-hover:scale-110 transition-transform">
            T
          </div>
          <div class="absolute inset-0 w-10 h-10 rounded-lg bg-gradient-to-br dark:from-neon-green dark:to-neon-blue from-emerald-500 to-sky-500 opacity-0 group-hover:opacity-50 blur-lg transition-opacity"></div>
        </div>
        <div class="flex flex-col">
          <span class="font-display font-bold text-xl text-heading">TorWeb<span class="text-accent">.pl</span></span>
          <span class="text-[10px] text-faint font-mono uppercase tracking-widest -mt-1">Agencja Interaktywna</span>
        </div>
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-8">
        <!-- Usługi Dropdown -->
        <div class="relative group/dropdown">
          <button 
            class:list={[
              "relative text-sm transition-colors font-medium flex items-center gap-1",
              isServicesActive ? "text-accent" : "text-muted hover:text-heading"
            ]}
          >
            Usługi
            <svg class="w-4 h-4 transition-transform group-hover/dropdown:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
            <span class:list={[
              "absolute -bottom-1 left-0 h-0.5 bg-gradient-to-r dark:from-neon-green dark:to-neon-blue from-emerald-500 to-sky-500 transition-all duration-300",
              isServicesActive ? "w-full" : "w-0 group-hover/dropdown:w-full"
            ]}></span>
          </button>
          
          <!-- Dropdown Menu -->
          <div class="absolute top-full left-0 pt-4 opacity-0 invisible group-hover/dropdown:opacity-100 group-hover/dropdown:visible transition-all duration-200">
            <div class="dropdown-menu w-64 rounded-xl border border-theme shadow-2xl overflow-hidden">
              <div class="p-2">
                {services.map(service => (
                  <a 
                    href={service.href}
                    class:list={[
                      "flex items-center gap-3 px-4 py-3 rounded-lg transition-all duration-200",
                      currentPath === service.href || currentPath === service.href + '/'
                        ? "bg-accent/10 text-accent" 
                        : "text-muted hover:bg-black/10 dark:hover:bg-white/5 hover:text-heading"
                    ]}
                  >
                    <div class="w-8 h-8 rounded-lg bg-accent/10 flex items-center justify-center flex-shrink-0">
                      {service.icon === 'web' && (
                        <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                        </svg>
                      )}
                      {service.icon === 'cart' && (
                        <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
                        </svg>
                      )}
                      {service.icon === 'app' && (
                        <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
                        </svg>
                      )}
                      {service.icon === 'ai' && (
                        <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                        </svg>
                      )}
                      {service.icon === 'auto' && (
                        <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                        </svg>
                      )}
                      {service.icon === 'migrate' && (
                        <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
                        </svg>
                      )}
                    </div>
                    <span class="text-sm font-medium">{service.label}</span>
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>
        
        <!-- Other Nav Links -->
        {navLinks.map(link => {
          const active = link.href.startsWith('/') && !link.href.includes('#') 
            ? currentPath === link.href || currentPath.startsWith(link.href)
            : false;
          return (
            <a 
              href={link.href}
              class:list={[
                "relative text-sm transition-colors font-medium group",
                active ? "text-accent" : "text-muted hover:text-heading"
              ]}
            >
              {link.label}
              <span class:list={[
                "absolute -bottom-1 left-0 h-0.5 bg-gradient-to-r dark:from-neon-green dark:to-neon-blue from-emerald-500 to-sky-500 transition-all duration-300",
                active ? "w-full" : "w-0 group-hover:w-full"
              ]}></span>
            </a>
          );
        })}
      </div>
      
      <!-- Right Side Desktop -->
      <div class="hidden lg:flex items-center gap-4">
        <a href="tel:+48509370772" class="text-sm text-muted hover:text-accent transition-colors font-mono">
          509 370 772
        </a>
        <ThemeToggle />
        <a href="/kontakt" class="btn-primary relative px-6 py-2.5 text-sm rounded-lg overflow-hidden group">
          <span class="relative z-10">Darmowa wycena</span>
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <div class="flex lg:hidden items-center gap-3 relative z-[100]">
        <ThemeToggle />
        <button 
          id="mobile-menu-btn" 
          type="button"
          class="relative w-12 h-12 flex items-center justify-center rounded-lg bg-gray-100 dark:bg-dark-800 border border-gray-200 dark:border-dark-700" 
          aria-label="Otwórz menu"
        >
          <div class="flex flex-col gap-1.5" id="hamburger">
            <span class="hamburger-line w-6 h-0.5 bg-gray-800 dark:bg-white transition-all origin-center"></span>
            <span class="hamburger-line w-6 h-0.5 bg-gray-800 dark:bg-white transition-all"></span>
            <span class="hamburger-line w-4 h-0.5 bg-emerald-500 dark:bg-neon-green transition-all origin-center"></span>
          </div>
        </button>
      </div>
    </div>
  </nav>
</header>

<!-- =====================================================
     MOBILE MENU - KOMPLETNIE OSOBNY OD HEADERA
     Z-INDEX 9999 + INLINE BACKGROUND COLOR
     ===================================================== -->
<div 
  id="mobile-menu" 
  class="lg:hidden"
  style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; z-index: 9999;"
>
  <!-- TŁO - INLINE STYLE ŻEBY NA PEWNO BYŁO SOLIDNE -->
  <div 
    id="mobile-menu-bg" 
    style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background-color: #ffffff;"
  ></div>
  
  <!-- HEADER MOBILE MENU -->
  <div 
    style="position: relative; z-index: 10; height: 80px; display: flex; align-items: center; justify-content: space-between; padding: 0 16px; border-bottom: 1px solid #e5e7eb;"
  >
    <a href="/" id="mobile-logo-link" style="display: flex; align-items: center; gap: 12px;">
      <div style="width: 40px; height: 40px; border-radius: 8px; background: linear-gradient(to bottom right, #10b981, #0ea5e9); display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 18px; color: #0a0b0d;">
        T
      </div>
      <span style="font-weight: bold; font-size: 20px; color: #111827;">TorWeb<span style="color: #10b981;">.pl</span></span>
    </a>
    
    <button 
      id="mobile-menu-close" 
      type="button"
      style="width: 48px; height: 48px; display: flex; align-items: center; justify-content: center; border-radius: 8px; background-color: #f3f4f6; border: 1px solid #e5e7eb;"
      aria-label="Zamknij menu"
    >
      <svg style="width: 24px; height: 24px; color: #374151;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
  </div>
  
  <!-- MENU CONTENT -->
  <nav 
    id="mobile-menu-content"
    style="position: relative; z-index: 10; display: flex; flex-direction: column; padding: 24px; overflow-y: auto; max-height: calc(100vh - 80px);"
  >
    <!-- Usługi -->
    <div style="margin-bottom: 16px;">
      <button 
        id="mobile-services-toggle" 
        type="button"
        style="display: flex; align-items: center; justify-content: space-between; width: 100%; padding: 12px 0; font-size: 20px; font-weight: 600; color: #374151; background: none; border: none; cursor: pointer;"
      >
        Usługi
        <svg id="mobile-services-arrow" style="width: 20px; height: 20px; transition: transform 0.2s;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
        </svg>
      </button>
      
      <div id="mobile-services-list" style="display: none; padding-left: 16px; margin-top: 8px; border-left: 2px solid #e5e7eb;">
        {services.map(service => (
          <a 
            href={service.href} 
            class="mobile-link"
            style={`display: block; padding: 8px 0; font-size: 16px; color: ${currentPath === service.href || currentPath === service.href + '/' ? '#10b981' : '#6b7280'}; text-decoration: none;`}
          >
            {service.label}
          </a>
        ))}
      </div>
    </div>
    
    <!-- Other Links -->
    {navLinks.map(link => {
      const active = link.href.startsWith('/') && !link.href.includes('#') ? currentPath === link.href : false;
      return (
        <a 
          href={link.href} 
          class="mobile-link"
          style={`display: block; padding: 12px 0; font-size: 20px; font-weight: 600; color: ${active ? '#10b981' : '#374151'}; text-decoration: none;`}
        >
          {link.label}
        </a>
      );
    })}
    
    <!-- CTA -->
    <div style="margin-top: 32px;">
      <a 
        href="/kontakt" 
        class="mobile-link"
        style="display: block; width: 100%; text-align: center; padding: 16px; border-radius: 12px; font-weight: 600; font-size: 18px; background: linear-gradient(to right, #10b981, #0ea5e9); color: #0a0b0d; text-decoration: none;"
      >
        Darmowa wycena
      </a>
      <a 
        href="tel:+48509370772" 
        class="mobile-link"
        style="display: block; text-align: center; padding: 12px; margin-top: 16px; font-family: monospace; color: #6b7280; text-decoration: none;"
      >
        +48 509 370 772
      </a>
    </div>
  </nav>
</div>

<style>
  #navbar.scrolled {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }
  
  :global(.dark) #navbar.scrolled {
    background: rgba(10, 11, 13, 0.95);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .dropdown-menu {
    background-color: #ffffff !important;
  }
  
  :global(.dark) .dropdown-menu {
    background-color: #0d0e10 !important;
  }
  
  /* Hamburger animation */
  #hamburger.open .hamburger-line:nth-child(1) {
    transform: rotate(45deg) translate(4px, 6px);
  }
  
  #hamburger.open .hamburger-line:nth-child(2) {
    opacity: 0;
  }
  
  #hamburger.open .hamburger-line:nth-child(3) {
    width: 1.5rem;
    transform: rotate(-45deg) translate(4px, -6px);
  }
</style>

<script is:inline>
(function() {
  const navbar = document.getElementById('navbar');
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenuClose = document.getElementById('mobile-menu-close');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileMenuBg = document.getElementById('mobile-menu-bg');
  const hamburger = document.getElementById('hamburger');
  const mobileServicesToggle = document.getElementById('mobile-services-toggle');
  const mobileServicesList = document.getElementById('mobile-services-list');
  const mobileServicesArrow = document.getElementById('mobile-services-arrow');
  const mobileLogoLink = document.getElementById('mobile-logo-link');
  
  let isMenuOpen = false;
  
  function isDark() {
    return document.documentElement.classList.contains('dark');
  }
  
  function updateDarkMode() {
    if (!mobileMenuBg || !mobileMenu) return;
    
    const dark = isDark();
    
    // Tło
    mobileMenuBg.style.backgroundColor = dark ? '#0a0b0d' : '#ffffff';
    
    // Header border
    const header = mobileMenu.querySelector('div[style*="border-bottom"]');
    if (header) {
      header.style.borderColor = dark ? '#374151' : '#e5e7eb';
    }
    
    // Logo text
    const logoText = mobileMenu.querySelector('[style*="color: #111827"]');
    if (logoText) {
      logoText.style.color = dark ? '#ffffff' : '#111827';
    }
    
    // Close button
    const closeBtn = document.getElementById('mobile-menu-close');
    if (closeBtn) {
      closeBtn.style.backgroundColor = dark ? '#1f2937' : '#f3f4f6';
      closeBtn.style.borderColor = dark ? '#374151' : '#e5e7eb';
      const svg = closeBtn.querySelector('svg');
      if (svg) svg.style.color = dark ? '#d1d5db' : '#374151';
    }
    
    // Services toggle
    if (mobileServicesToggle) {
      mobileServicesToggle.style.color = dark ? '#d1d5db' : '#374151';
    }
    
    // Services list border
    if (mobileServicesList) {
      mobileServicesList.style.borderColor = dark ? '#374151' : '#e5e7eb';
    }
    
    // Update link colors
    mobileMenu.querySelectorAll('.mobile-link').forEach(function(link) {
      const currentColor = link.style.color;
      if (currentColor === '#374151' || currentColor === 'rgb(55, 65, 81)') {
        link.style.color = dark ? '#d1d5db' : '#374151';
      } else if (currentColor === '#6b7280' || currentColor === 'rgb(107, 114, 128)') {
        link.style.color = dark ? '#9ca3af' : '#6b7280';
      }
      // Keep #10b981 (accent) as is
    });
  }
  
  // Scroll handler
  function handleScroll() {
    if (navbar) {
      navbar.classList.toggle('scrolled', window.scrollY > 50);
    }
  }
  
  window.addEventListener('scroll', handleScroll, { passive: true });
  handleScroll();
  
  function openMenu() {
    isMenuOpen = true;
    if (mobileMenu) {
      mobileMenu.style.display = 'block';
      updateDarkMode();
    }
    if (hamburger) hamburger.classList.add('open');
    document.body.style.overflow = 'hidden';
  }
  
  function closeMenu() {
    isMenuOpen = false;
    if (mobileMenu) mobileMenu.style.display = 'none';
    if (hamburger) hamburger.classList.remove('open');
    document.body.style.overflow = '';
  }
  
  // Event listeners
  if (mobileMenuBtn) {
    mobileMenuBtn.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      isMenuOpen ? closeMenu() : openMenu();
    });
  }
  
  if (mobileMenuClose) {
    mobileMenuClose.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      closeMenu();
    });
  }
  
  if (mobileLogoLink) {
    mobileLogoLink.addEventListener('click', closeMenu);
  }
  
  if (mobileServicesToggle) {
    mobileServicesToggle.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      if (mobileServicesList) {
        const isOpen = mobileServicesList.style.display !== 'none';
        mobileServicesList.style.display = isOpen ? 'none' : 'block';
        if (mobileServicesArrow) {
          mobileServicesArrow.style.transform = isOpen ? '' : 'rotate(180deg)';
        }
      }
    });
  }
  
  // Close on link click
  document.querySelectorAll('#mobile-menu .mobile-link').forEach(function(link) {
    link.addEventListener('click', closeMenu);
  });
  
  // Resize handler
  window.addEventListener('resize', function() {
    if (window.innerWidth >= 1024 && isMenuOpen) {
      closeMenu();
    }
  });
  
  // Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && isMenuOpen) {
      closeMenu();
    }
  });
  
  // Watch for theme changes
  var observer = new MutationObserver(function() {
    if (isMenuOpen) {
      updateDarkMode();
    }
  });
  
  observer.observe(document.documentElement, {
    attributes: true,
    attributeFilter: ['class']
  });
})();
</script>