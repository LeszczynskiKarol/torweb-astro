---
const stats = [
  { value: '15+', label: 'lat doświadczenia' },
  { value: '50+', label: 'zrealizowanych projektów' },
  { value: '100%', label: 'satysfakcji klientów' },
  { value: '24 godz.', label: 'odpowiedzi na wycenę' },
];

const techStack = ['Next.js', 'React', 'Node.js', 'TypeScript', 'AWS', 'AI'];
---

<section id="hero" class="relative min-h-screen flex items-center pt-6 overflow-hidden">
  <!-- Animated Background Elements (dark mode only) -->
  <div class="absolute top-32 right-10 w-72 h-72 rounded-full blur-[100px] animate-pulse-slow dark:bg-neon-green/10 bg-emerald-500/5"></div>
  <div class="absolute bottom-20 left-10 w-96 h-96 rounded-full blur-[120px] animate-pulse-slow dark:bg-neon-blue/10 bg-sky-500/5" style="animation-delay: 1s;"></div>
  
  <!-- Floating Code Snippets -->
  
  <div class="absolute bottom-40 right-[8%] hidden xl:block animate-float dark:opacity-30 opacity-60" style="animation-delay: 2s;">
    <div class="code-block px-4 py-3 text-xs font-mono">
      <span class="text-violet-600 dark:text-neon-purple">await</span> <span class="text-slate-800 dark:text-white">createWebsite</span>();
    </div>
  </div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Left Column - Content -->
      <div class="space-y-8">
        <!-- Location Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full glass animate-fade-in">
          <span class="w-2 h-2 rounded-full bg-accent animate-pulse"></span>
          <span class="text-sm text-muted">Toruń • Bydgoszcz • Cała Polska</span>
        </div>
        
        <!-- Main Heading -->
        <h1 class="font-display font-bold text-4xl sm:text-5xl lg:text-6xl xl:text-7xl leading-[1.1] animate-slide-up text-heading">
          Tworzymy strony,
          <br />
          <span class="gradient-text">które sprzedają</span>
        </h1>
        
        <!-- Subheading -->
        <p class="text-lg sm:text-xl text-muted max-w-xl leading-relaxed animate-slide-up" style="animation-delay: 100ms;">
          Agencja interaktywna z <strong class="text-heading">15-letnim doświadczeniem</strong>. 
          Strony internetowe, sklepy e-commerce, aplikacje webowe i integracje AI. 
          <span class="text-accent">Lokalne wsparcie</span> w Toruniu i Bydgoszczy.
        </p>
        
        <!-- CTA Buttons -->
        <div class="flex flex-wrap gap-4 animate-slide-up" style="animation-delay: 200ms;">
          <a 
            href="#kontakt"
            class="btn-primary group relative inline-flex items-center gap-2 px-8 py-4 rounded-xl overflow-hidden transition-transform hover:scale-105"
          >
            <span class="relative z-10">Darmowa wycena</span>
            <svg class="w-5 h-5 relative z-10 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
            <div class="absolute inset-0 bg-white opacity-0 group-hover:opacity-20 transition-opacity"></div>
          </a>
          <a 
            href="#portfolio"
            class="group inline-flex items-center gap-2 px-8 py-4 border border-theme hover:border-accent text-heading font-semibold rounded-xl transition-all hover:bg-card"
          >
            <span>Zobacz projekty</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </a>
        </div>
        
        <!-- Tech Stack -->
        <div class="flex flex-wrap gap-2 pt-4 animate-slide-up" style="animation-delay: 300ms;">
          {techStack.map(tech => (
            <span class="px-3 py-1.5 text-xs font-mono text-muted bg-elevated rounded-lg border border-theme hover:border-accent hover:text-accent transition-colors">
              {tech}
            </span>
          ))}
        </div>
      </div>
      
      <!-- Right Column - Visual -->
      <div class="relative lg:pl-8 animate-fade-in" style="animation-delay: 400ms;">
        <!-- Terminal/Code Editor Mockup -->
        <div class="relative glass rounded-2xl p-6 shadow-2xl">
          <!-- Window Controls -->
          <div class="flex items-center gap-2 mb-6">
            <div class="w-3 h-3 rounded-full bg-red-500/80"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500/80"></div>
            <div class="w-3 h-3 rounded-full bg-green-500/80"></div>
            <span class="ml-4 text-xs text-faint font-mono">torweb.config.ts</span>
          </div>
          
          <!-- Code Content -->
          <div class="font-mono text-sm space-y-2">
            <div>
              <span class="dark:text-neon-purple text-violet-600">const</span>
              <span class="text-heading"> projekt </span>
              <span class="text-faint">=</span>
              <span class="dark:text-neon-blue text-sky-600"> {`{`}</span>
            </div>
            <div class="pl-4">
              <span class="text-accent">klient</span><span class="text-faint">:</span>
              <span class="text-amber-500"> "Twoja firma"</span><span class="text-faint">,</span>
            </div>
            <div class="pl-4">
              <span class="text-accent">technologie</span><span class="text-faint">:</span>
              <span class="text-heading"> [</span>
              <span class="text-amber-500">"Next.js"</span><span class="text-faint">,</span>
              <span class="text-amber-500"> "React"</span><span class="text-faint">,</span>
              <span class="text-amber-500"> "AI"</span>
              <span class="text-heading">]</span><span class="text-faint">,</span>
            </div>
            <div class="pl-4">
              <span class="text-accent">pageSpeed</span><span class="text-faint">:</span>
              <span class="text-accent"> 98</span><span class="text-faint">,</span>
            </div>
            <div class="pl-4">
              <span class="text-accent">seoOptimized</span><span class="text-faint">:</span>
              <span class="dark:text-neon-purple text-violet-600"> true</span><span class="text-faint">,</span>
            </div>
            <div class="pl-4">
              <span class="text-accent">sukces</span><span class="text-faint">:</span>
              <span class="dark:text-neon-purple text-violet-600"> guaranteed</span>
            </div>
            <div>
              <span class="dark:text-neon-blue text-sky-600">{`}`}</span><span class="text-faint">;</span>
            </div>
          </div>
          
          <!-- Blinking Cursor -->
          <div class="mt-4 flex items-center gap-2 font-mono text-sm">
            <span class="text-accent">❯</span>
            <span class="w-2 h-5 bg-accent animate-pulse"></span>
          </div>
        </div>
        
        <!-- Floating Cards -->
        <div class="absolute -top-4 -right-4 glass rounded-xl p-4 animate-bounce-subtle shadow-lg">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-gradient-to-br dark:from-neon-green/20 dark:to-neon-blue/20 from-emerald-500/20 to-sky-500/20 flex items-center justify-center">
              <svg class="w-5 h-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <div>
              <div class="text-xs text-muted">PageSpeed</div>
              <div class="font-bold text-accent">98/100</div>
            </div>
          </div>
        </div>
        
        <div class="absolute -bottom-4 -left-4 glass rounded-xl p-4 animate-bounce-subtle shadow-lg" style="animation-delay: 500ms;">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-gradient-to-br dark:from-neon-blue/20 dark:to-neon-purple/20 from-sky-500/20 to-violet-500/20 flex items-center justify-center">
              <svg class="w-5 h-5 text-accent-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <div class="text-xs text-muted">SEO Score</div>
              <div class="font-bold text-accent-secondary">100%</div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Stats Bar -->
    <div class="mt-20 lg:mt-32 grid grid-cols-2 md:grid-cols-4 gap-6 animate-on-scroll">
      {stats.map((stat, i) => (
        <div class={`text-center p-6 rounded-2xl glass hover:border-accent transition-colors animate-delay-${(i + 1) * 100}`}>
          <div class="font-display font-bold text-3xl sm:text-4xl gradient-text mb-2">{stat.value}</div>
          <div class="text-sm text-muted">{stat.label}</div>
        </div>
      ))}
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 animate-bounce-subtle">
    <span class="text-xs text-slate-500 dark:text-gray-500 uppercase tracking-widest">Scroll</span>
    <div class="w-6 h-10 rounded-full border-2 border-slate-300 dark:border-gray-700 flex items-start justify-center p-2">
      <div class="w-1 h-2 rounded-full bg-emerald-500 dark:bg-neon-green animate-bounce"></div>
    </div>
  </div>
</section>




