---

<section id="portfolio" class="py-24 lg:py-32 relative">
  <!-- Background Accent -->
  <div class="absolute inset-0 bg-gradient-to-b dark:from-dark-950 dark:via-dark-900/50 dark:to-dark-950 from-slate-50 via-white to-slate-50 -z-10"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16 animate-on-scroll">
      <span class="inline-block px-4 py-1.5 rounded-full glass text-accent-secondary text-sm font-mono mb-6">
        &lt;portfolio /&gt;
      </span>
      <h2 class="font-display font-bold text-3xl sm:text-4xl lg:text-5xl mb-6 text-heading">
        Projekty z <span class="gradient-text">realnymi wynikami</span>
      </h2>
      <p class="text-muted text-lg">
        Każdy projekt to unikalne rozwiązanie dopasowane do potrzeb klienta. 
        Nie tworzę szablonowych stron — buduję narzędzia które generują przychód.
      </p>
    </div>
    
    <!-- Featured Projects (3 SaaS platforms) -->
    <div class="grid lg:grid-cols-3 gap-6 mb-12">
      {featuredProjects.map((project, i) => (
        <div class={`group relative glass rounded-2xl overflow-hidden hover:border-accent transition-all duration-500 animate-on-scroll animate-delay-${(i + 1) * 100}`}>
          <!-- Image -->
          <div class="aspect-video bg-gradient-to-br dark:from-dark-800 dark:to-dark-900 from-slate-100 to-slate-200 relative overflow-hidden">
            {project.image && (
              <img 
                src={project.image} 
                alt={project.title}
                class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                loading="lazy"
              />
            )}
            <div class="absolute inset-0 bg-gradient-to-t dark:from-dark-950 from-white via-transparent to-transparent z-10"></div>
            <!-- Featured Badge -->
            <div class="absolute top-4 left-4 z-20 px-3 py-1 rounded-full dark:bg-neon-green/20 bg-emerald-500/20 dark:border-neon-green/30 border-emerald-500/30 border text-accent text-xs font-medium">
              Featured
            </div>
          </div>
          
          <!-- Content -->
          <div class="p-6">
            <div class="flex items-start justify-between mb-3">
              <div>
                <span class="text-xs text-faint font-mono">{project.category}</span>
                <h3 class="font-display font-bold text-xl text-heading mt-1">{project.title}</h3>
              </div>
              {project.url !== '#' && (
                <a 
                  href={project.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-9 h-9 rounded-lg border border-theme flex items-center justify-center text-muted hover:text-accent hover:border-accent transition-colors flex-shrink-0"
                >
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              )}
            </div>
            
            <p class="text-muted text-sm mb-4 line-clamp-2">{project.description}</p>
            
            <!-- Results -->
            <div class="grid grid-cols-2 gap-3 mb-4">
              {project.results.map(result => (
                <div class="p-3 rounded-lg bg-elevated">
                  <div class="text-xs text-faint mb-0.5">{result.label}</div>
                  <div class="font-display font-bold text-lg gradient-text">{result.value}</div>
                </div>
              ))}
            </div>
            
            <!-- Tech Stack -->
            <div class="flex flex-wrap gap-1.5">
              {project.tech.slice(0, 4).map(t => (
                <span class="px-2 py-1 text-xs font-mono text-muted bg-elevated rounded-lg">
                  {t}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Other Projects Grid (9 projects in 3 columns) -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      {otherProjects.map((project, i) => (
        <div class={`group glass rounded-xl overflow-hidden hover:border-accent-secondary transition-all duration-300 hover:-translate-y-1 animate-on-scroll animate-delay-${(i + 1) * 50}`}>
