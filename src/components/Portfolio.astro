          </div>
          
          <div class="p-5">
            <div class="flex items-start justify-between mb-2">
              <div>
                <span class="text-xs text-faint font-mono">{project.category}</span>
                <h3 class="font-display font-semibold text-lg text-heading mt-1">{project.title}</h3>
              </div>
              {project.url !== '#' && (
                <a 
                  href={project.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-muted hover:text-accent-secondary transition-colors"
                >
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              )}
            </div>
            
            <p class="text-muted text-sm mb-4 line-clamp-2">{project.description}</p>
            
            <!-- Results inline -->
            <div class="flex gap-4 mb-4">
              {project.results.map(result => (
                <div class="flex items-center gap-1.5">
                  <span class="text-accent font-bold text-sm">{result.value}</span>
                  <span class="text-xs text-faint">{result.label}</span>
                </div>
              ))}
            </div>
            
            <!-- Tech Stack -->
            <div class="flex flex-wrap gap-1.5">
              {project.tech.slice(0, 4).map(t => (
                <span class="px-2 py-0.5 text-[11px] font-mono text-faint bg-elevated rounded">
                  {t}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- CTA - Zobacz wszystkie -->
    <div class="text-center animate-on-scroll">
      <a 
        href="/realizacje"
        class="inline-flex items-center gap-3 px-8 py-4 glass rounded-xl hover:border-accent transition-all duration-300 group"
      >
        <span class="text-body font-medium">Zobacz wszystkie realizacje ze szczegółami</span>
        <svg class="w-5 h-5 text-accent group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>