---
// src/components/BlogSection.astro
import { getCollection } from 'astro:content';

// Pobierz 3 najnowsze artykuły
const allPosts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? data.draft !== true : true;
});

const latestPosts = allPosts
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 3);

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('pl-PL', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  }).format(date);
};

const getReadingTime = (content: string) => {
  const words = content.split(/\s+/).length;
  return Math.ceil(words / 200);
};
---

<section id="blog" class="py-20 sm:py-32 bg-elevated">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Header -->
    <div class="text-center mb-16 animate-on-scroll animate-fade-in-up">
      <span class="inline-block px-4 py-2 bg-accent/10 text-accent rounded-full text-sm font-medium mb-4">
        Blog
      </span>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-heading mb-6">
        Wiedza, która <span class="text-gradient">procentuje</span>
      </h2>
      <p class="text-lg text-muted max-w-2xl mx-auto">
        Praktyczne porady o tworzeniu stron, sklepów i aplikacji webowych. 
        Dowiedz się, jak rozwijać swoją firmę online.
      </p>
    </div>
    
    <!-- Posts Grid -->
    {latestPosts.length > 0 ? (
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
        {latestPosts.map((post, index) => (
          <a 
            href={`/blog/${post.slug}`}
            class={`group block bg-card border border-theme rounded-xl overflow-hidden hover:border-accent/50 transition-all duration-300 animate-on-scroll animate-fade-in-up delay-${(index + 1) * 100}`}
          >
            {post.data.image ? (
              <div class="aspect-video bg-elevated overflow-hidden">
                <img 
                  src={post.data.image} 
                  alt={post.data.imageAlt || post.data.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  loading="lazy"
                />
              </div>
            ) : (
              <div class="aspect-video bg-gradient-to-br from-emerald-500/20 to-sky-500/20 flex items-center justify-center">
                <span class="text-4xl font-bold text-accent/30">
                  {post.data.title.substring(0, 2).toUpperCase()}
                </span>
              </div>
            )}
            <div class="p-5">
              <div class="flex items-center gap-2 mb-3">
                <span class="px-2 py-0.5 text-xs font-medium bg-accent/10 text-accent rounded">
                  {post.data.category}
                </span>
                <span class="text-xs text-muted">
                  {formatDate(post.data.publishDate)}
                </span>
              </div>
              <h3 class="text-lg font-bold text-heading mb-2 group-hover:text-accent transition-colors line-clamp-2">
                {post.data.title}
              </h3>
              <p class="text-sm text-muted line-clamp-2 mb-3">
                {post.data.description}
              </p>
              <div class="flex items-center justify-between text-sm">
                <span class="text-muted">
                  {getReadingTime(post.body || '')} min czytania
                </span>
                <span class="text-accent font-medium group-hover:translate-x-1 transition-transform">
                  →
                </span>
              </div>
            </div>
          </a>
        ))}
      </div>
    ) : (
      <div class="text-center py-12 bg-card border border-theme rounded-2xl mb-12">
        <p class="text-muted">Artykuły pojawią się wkrótce.</p>
      </div>
    )}
    
    <!-- CTA -->
    <div class="text-center animate-on-scroll animate-fade-in-up">
      <a 
        href="/blog" 
        class="inline-flex items-center gap-2 px-6 py-3 bg-card border border-theme text-heading font-medium rounded-xl hover:border-accent hover:text-accent transition-all"
      >
        Zobacz wszystkie artykuły
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
    
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>