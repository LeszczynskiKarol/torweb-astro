---
// ThemeToggle.astro - Dark/Light mode switch
---

<button
  id="theme-toggle"
  type="button"
  class="theme-toggle-btn relative w-10 h-10 rounded-lg flex items-center justify-center transition-all duration-300 border border-gray-200 dark:border-dark-700 bg-gray-100 dark:bg-dark-800 hover:bg-gray-200 dark:hover:bg-dark-700"
  aria-label="Przełącz motyw"
  title="Przełącz jasny/ciemny motyw"
>
  <!-- Sun icon (shown in dark mode) -->
  <svg
    class="theme-icon-sun w-5 h-5 text-yellow-500 absolute transition-all duration-300"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
    />
  </svg>
  
  <!-- Moon icon (shown in light mode) -->
  <svg
    class="theme-icon-moon w-5 h-5 text-indigo-600 absolute transition-all duration-300"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
    />
  </svg>
</button>

<style>
  /* Light mode: show moon (to switch to dark) */
  :global(html:not(.dark)) .theme-icon-sun {
    opacity: 0;
    transform: rotate(-90deg) scale(0);
  }
  
  :global(html:not(.dark)) .theme-icon-moon {
    opacity: 1;
    transform: rotate(0) scale(1);
  }
  
  /* Dark mode: show sun (to switch to light) */
  :global(html.dark) .theme-icon-sun {
    opacity: 1;
    transform: rotate(0) scale(1);
  }
  
  :global(html.dark) .theme-icon-moon {
    opacity: 0;
    transform: rotate(90deg) scale(0);
  }
</style>

<script is:inline>
(function() {
  function initTheme() {
    const html = document.documentElement;
    
    // Get saved or system preference
    function getTheme() {
      const saved = localStorage.getItem('theme');
      if (saved === 'light' || saved === 'dark') return saved;
      return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
    }
    
    // Apply theme
    function setTheme(theme) {
      if (theme === 'dark') {
        html.classList.add('dark');
        html.classList.remove('light');
      } else {
        html.classList.remove('dark');
        html.classList.add('light');
      }
      localStorage.setItem('theme', theme);
    }
    
    // Toggle theme
    function toggleTheme() {
      const current = html.classList.contains('dark') ? 'dark' : 'light';
      setTheme(current === 'dark' ? 'light' : 'dark');
    }
    
    // Initialize
    setTheme(getTheme());
    
    // Bind click to ALL theme toggle buttons (there may be multiple)
    function bindToggle() {
      document.querySelectorAll('#theme-toggle, .theme-toggle-btn').forEach(function(btn) {
        // Remove old listeners by cloning
        const newBtn = btn.cloneNode(true);
        btn.parentNode?.replaceChild(newBtn, btn);
        
        newBtn.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          toggleTheme();
        });
      });
    }
    
    bindToggle();
    
    // Re-bind after Astro transitions
    document.addEventListener('astro:after-swap', function() {
      setTheme(getTheme());
      bindToggle();
    });
    
    // Listen for system changes
    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', function(e) {
      if (!localStorage.getItem('theme')) {
        setTheme(e.matches ? 'dark' : 'light');
      }
    });
  }
  
  // Run immediately
  initTheme();
})();
</script>