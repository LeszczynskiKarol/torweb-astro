---
// ThemeToggle.astro - Dark/Light mode switch with visible styling
---

<button
  id="theme-toggle"
  type="button"
  class="relative w-10 h-10 rounded-lg flex items-center justify-center transition-all duration-300 border border-theme hover:border-accent bg-elevated"
  aria-label="Przełącz motyw"
  title="Przełącz jasny/ciemny motyw"
>
  <!-- Sun icon (visible in dark mode - click to go light) -->
  <svg
    id="sun-icon"
    class="w-5 h-5 transition-all duration-300 absolute text-yellow-400"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
    />
  </svg>
  
  <!-- Moon icon (visible in light mode - click to go dark) -->
  <svg
    id="moon-icon"
    class="w-5 h-5 transition-all duration-300 absolute text-indigo-500 opacity-0"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
    />
  </svg>
</button>

<script>
  function initThemeToggle() {
    const themeToggle = document.getElementById('theme-toggle');
    const sunIcon = document.getElementById('sun-icon');
    const moonIcon = document.getElementById('moon-icon');
    const html = document.documentElement;

    function getTheme(): string {
      if (typeof localStorage !== 'undefined') {
        const saved = localStorage.getItem('theme');
        if (saved) return saved;
      }
      if (window.matchMedia('(prefers-color-scheme: light)').matches) {
        return 'light';
      }
      return 'dark';
    }

    function setTheme(theme: string): void {
      if (theme === 'light') {
        html.classList.remove('dark');
        html.classList.add('light');
        sunIcon?.classList.add('opacity-0');
        moonIcon?.classList.remove('opacity-0');
      } else {
        html.classList.add('dark');
        html.classList.remove('light');
        sunIcon?.classList.remove('opacity-0');
        moonIcon?.classList.add('opacity-0');
      }
      localStorage.setItem('theme', theme);
    }

    // Initialize
    setTheme(getTheme());

    // Toggle on click
    themeToggle?.addEventListener('click', () => {
      const currentTheme = html.classList.contains('light') ? 'light' : 'dark';
      setTheme(currentTheme === 'dark' ? 'light' : 'dark');
    });

    // Listen for system changes
    window.matchMedia('(prefers-color-scheme: light)').addEventListener('change', (e) => {
      if (!localStorage.getItem('theme')) {
        setTheme(e.matches ? 'light' : 'dark');
      }
    });
  }

  // Run on load and on Astro page transitions
  initThemeToggle();
  document.addEventListener('astro:after-swap', initThemeToggle);
</script>