<script is:inline src="https://upload-widget.cloudinary.com/global/all.js"></script>

<script is:inline>
  // ========================================
  // KONFIGURACJA TORWEB.PL - HOMEPAGE
  // ========================================
  
  const HP_EMAILJS_PUBLIC_KEY = "gjau8dneW58l9l3tz";
  const HP_EMAILJS_SERVICE_ID = "service_y4gw1yd";
  const HP_EMAILJS_TEMPLATE_ID = "template_x90lsb5";
  
  const HP_CLOUDINARY_CLOUD_NAME = "drpll3ho2";
  const HP_CLOUDINARY_UPLOAD_PRESET = "torweb";

  // ========================================
  // INICJALIZACJA
  // ========================================
  
  if (typeof emailjs !== 'undefined') {
    emailjs.init(HP_EMAILJS_PUBLIC_KEY);
  }
  
  let hpUploadedFiles = [];

  // ========================================
  // CLOUDINARY WIDGET
  // ========================================
  
  let hpWidget = null;
  
  function initHpCloudinary() {
    if (typeof cloudinary !== 'undefined' && !hpWidget) {
      hpWidget = cloudinary.createUploadWidget(
        {
          cloudName: HP_CLOUDINARY_CLOUD_NAME,
          uploadPreset: HP_CLOUDINARY_UPLOAD_PRESET,
          sources: ['local', 'url', 'camera'],
          multiple: true,
          maxFiles: 5,
          maxFileSize: 10485760,
          resourceType: 'auto',
          clientAllowedFormats: ['jpg', 'jpeg', 'png', 'pdf', 'doc', 'docx'],
          showPoweredBy: false,
          language: 'pl',
          styles: {
            palette: {
              window: "#0d0e10",
              windowBorder: "#00ff88",
              tabIcon: "#00ff88",
              menuIcons: "#00ff88",
              textDark: "#ffffff",
              textLight: "#ffffff",
              link: "#00ff88",
              action: "#00ff88",
              inactiveTabIcon: "#666666",
              error: "#ef4444",
              inProgress: "#00ff88",
              complete: "#10b981",
              sourceBg: "#1a1b1e"
            }
          }
        },
        (error, result) => {
          if (!error && result && result.event === "success") {
            const fileInfo = {
              url: result.info.secure_url,
              name: result.info.original_filename,
              size: result.info.bytes,
              format: result.info.format
            };
            hpUploadedFiles.push(fileInfo);
            document.getElementById('hp_attachment_urls').value = hpUploadedFiles.map(f => f.url).join(',');
            hpDisplayUploadedFile(fileInfo);
          }
        }
      );
    }
  }

  // ========================================
  // FUNKCJE POMOCNICZE
  // ========================================
  
  function hpDisplayUploadedFile(fileInfo) {
    const container = document.getElementById('hp-uploaded-files');
    const fileElement = document.createElement('div');
    fileElement.className = 'flex items-center justify-between p-3 bg-elevated rounded-lg border border-theme';
    fileElement.innerHTML = `
      <div class="flex items-center gap-3">
        <span class="text-lg">üìé</span>
        <div>
          <p class="text-sm font-medium text-body">${fileInfo.name}.${fileInfo.format}</p>
          <p class="text-xs text-muted">${hpFormatFileSize(fileInfo.size)}</p>
        </div>
      </div>
      <button type="button" class="text-red-500 hover:text-red-400 transition-colors" data-url="${fileInfo.url}">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    `;
    container.appendChild(fileElement);
    
    fileElement.querySelector('button').addEventListener('click', function() {
      hpRemoveFile(this.dataset.url, fileElement);
    });
  }

  function hpRemoveFile(url, element) {
    hpUploadedFiles = hpUploadedFiles.filter(f => f.url !== url);
    document.getElementById('hp_attachment_urls').value = hpUploadedFiles.map(f => f.url).join(',');
    element.remove();
  }

  function hpFormatFileSize(bytes) {
    if (bytes === 0) return '0 Bytes';
    const k = 1024;
    const sizes = ['Bytes', 'KB', 'MB'];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
  }

  function openHpUploadWidget() {
    if (hpWidget) {
      hpWidget.open();
    } else {
      // Retry initialization
      initHpCloudinary();
      setTimeout(() => {
        if (hpWidget) hpWidget.open();
      }, 200);
    }
  }

  // ========================================
  // EVENT LISTENERS
  // ========================================
  
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize Cloudinary
    initHpCloudinary();
    
    // Retry if cloudinary wasn't loaded yet
    if (!hpWidget) {
      setTimeout(initHpCloudinary, 500);
    }
    
    // Upload area - CA≈ÅY OBSZAR KLIKALNY
    const uploadArea = document.getElementById('hp-file-upload-area');
    if (uploadArea) {
      uploadArea.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        openHpUploadWidget();
      });

      // Drag and drop
      uploadArea.addEventListener('dragover', (e) => {
        e.preventDefault();
        uploadArea.classList.add('border-accent', 'bg-accent/5');
      });
      
      uploadArea.addEventListener('dragleave', () => {
        uploadArea.classList.remove('border-accent', 'bg-accent/5');
      });
      
      uploadArea.addEventListener('drop', (e) => {
        e.preventDefault();
        uploadArea.classList.remove('border-accent', 'bg-accent/5');
        openHpUploadWidget();
      });
    }

    // Form submission
    const form = document.getElementById('homepage-contact-form');
    if (form) {
      const submitBtn = document.getElementById('hp-submit-btn');
      const btnText = document.getElementById('hp-btn-text');
      const btnLoading = document.getElementById('hp-btn-loading');
      const formStatus = document.getElementById('hp-form-status');

      form.addEventListener('submit', function(event) {
        event.preventDefault();
        
        // Loading state
        btnText.classList.add('hidden');
        btnLoading.classList.remove('hidden');
        btnLoading.classList.add('flex');
        submitBtn.disabled = true;
        formStatus.classList.add('hidden');
        
        // Prepare data
        const formData = new FormData(this);
        const templateParams = {
          user_name: formData.get('user_name'),
          user_email: formData.get('user_email'),
          user_phone: formData.get('user_phone') || 'Nie podano',
          company: formData.get('company') || 'Nie podano',
          project_type: formData.get('project_type') || 'Nie wybrano',
          budget: formData.get('budget') || 'Nie podano',
          message: formData.get('message'),
          attachments: hpUploadedFiles.length > 0 
            ? hpUploadedFiles.map(f => `${f.name}.${f.format}: ${f.url}`).join('\n')
            : 'Brak za≈ÇƒÖcznik√≥w',
          source: 'Strona g≈Ç√≥wna - sekcja kontakt'
        };
        
        // Send via EmailJS
        emailjs.send(HP_EMAILJS_SERVICE_ID, HP_EMAILJS_TEMPLATE_ID, templateParams)
          .then(function() {
            // Success
            formStatus.innerHTML = `
              <div class="p-4 bg-accent/10 border border-accent/30 rounded-xl flex items-start gap-3">
                <svg class="w-6 h-6 text-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <p class="font-semibold text-accent">Wiadomo≈õƒá wys≈Çana!</p>
                  <p class="text-sm text-muted">Dziƒôkujemy za kontakt. Odpowiemy w ciƒÖgu 24 godzin.</p>
                </div>
              </div>
            `;
            formStatus.classList.remove('hidden');
            
            // Reset
            form.reset();
            hpUploadedFiles = [];
            document.getElementById('hp-uploaded-files').innerHTML = '';
            document.getElementById('hp_attachment_urls').value = '';
            
            btnText.classList.remove('hidden');
            btnLoading.classList.add('hidden');
            submitBtn.disabled = false;
            
            setTimeout(() => formStatus.classList.add('hidden'), 8000);
          })
          .catch(function(error) {
            // Error
            formStatus.innerHTML = `
              <div class="p-4 bg-red-500/10 border border-red-500/30 rounded-xl flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <p class="font-semibold text-red-500">WystƒÖpi≈Ç b≈ÇƒÖd</p>
                  <p class="text-sm text-muted">Spr√≥buj ponownie lub napisz na: kontakt@torweb.pl</p>
                </div>
              </div>
            `;
            formStatus.classList.remove('hidden');
            
            btnText.classList.remove('hidden');
            btnLoading.classList.add('hidden');
            submitBtn.disabled = false;
            
            console.error('EmailJS error:', error);
          });
      });
    }
  });
</script>