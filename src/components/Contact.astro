<script define:vars={{ CLOUDINARY_CLOUD_NAME, CLOUDINARY_UPLOAD_PRESET }}>
  // ========================================
  // KONFIGURACJA TORWEB.PL - HOMEPAGE
  // ========================================
  const API_ENDPOINT =
    "https://4xz7pkbd51.execute-api.eu-north-1.amazonaws.com/prod/send";
  const DOMAIN = "torweb.pl";

  let hpUploadedFiles = [];
  let hpWidget = null;

  function hpFormatFileSize(bytes) {
    if (bytes === 0) return "0 Bytes";
    const k = 1024;
    const sizes = ["Bytes", "KB", "MB"];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    return Math.round((bytes / Math.pow(k, i)) * 100) / 100 + " " + sizes[i];
  }

  function initHpCloudinary() {
    if (typeof cloudinary !== "undefined" && !hpWidget) {
      hpWidget = cloudinary.createUploadWidget(
        {
          cloudName: CLOUDINARY_CLOUD_NAME,
          uploadPreset: CLOUDINARY_UPLOAD_PRESET,
          sources: ["local", "url", "camera"],
          multiple: true,
          maxFiles: 5,
          maxFileSize: 10485760,
          resourceType: "auto",
          clientAllowedFormats: ["jpg", "jpeg", "png", "pdf", "doc", "docx"],
          showPoweredBy: false,
          language: "pl",
        },
        (error, result) => {
          if (!error && result && result.event === "success") {
            const fileInfo = {
              url: result.info.secure_url,
              name: result.info.original_filename,
              size: result.info.bytes,
              format: result.info.format,
            };
            hpUploadedFiles.push(fileInfo);
            hpDisplayUploadedFile(fileInfo);
          }
        }
      );
    }
  }

  function hpDisplayUploadedFile(fileInfo) {
    const container = document.getElementById("hp-uploaded-files");
    const fileElement = document.createElement("div");
    fileElement.className =
      "flex items-center justify-between p-3 bg-elevated rounded-lg border border-theme";
    fileElement.innerHTML = `
      <div class="flex items-center gap-3">
        <span class="text-lg">üìé</span>
        <div>
          <p class="text-sm font-medium text-body">${fileInfo.name}.${fileInfo.format}</p>
          <p class="text-xs text-muted">${hpFormatFileSize(fileInfo.size)}</p>
        </div>
      </div>
      <button type="button" class="text-red-500 hover:text-red-400 transition-colors" data-url="${fileInfo.url}">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    `;
    container.appendChild(fileElement);

    fileElement.querySelector("button").addEventListener("click", function () {
      hpUploadedFiles = hpUploadedFiles.filter(
        (f) => f.url !== this.dataset.url
      );
      fileElement.remove();
    });
  }

  function openHpUploadWidget() {
    if (hpWidget) {
      hpWidget.open();
    } else {
      initHpCloudinary();
      setTimeout(() => {
        if (hpWidget) hpWidget.open();
      }, 200);
    }
  }

  document.addEventListener("DOMContentLoaded", function () {
    initHpCloudinary();
    if (!hpWidget) setTimeout(initHpCloudinary, 500);

    const uploadArea = document.getElementById("hp-file-upload-area");
    if (uploadArea) {
      uploadArea.addEventListener("click", (e) => {
        e.preventDefault();
        openHpUploadWidget();
      });
      uploadArea.addEventListener("dragover", (e) => {
        e.preventDefault();
        uploadArea.classList.add("border-accent");
      });
      uploadArea.addEventListener("dragleave", () =>
        uploadArea.classList.remove("border-accent")
      );
      uploadArea.addEventListener("drop", (e) => {
        e.preventDefault();
        uploadArea.classList.remove("border-accent");
        openHpUploadWidget();
      });
    }

    const form = document.getElementById("homepage-contact-form");
    if (form) {
      const submitBtn = document.getElementById("hp-submit-btn");
      const btnText = document.getElementById("hp-btn-text");
      const btnLoading = document.getElementById("hp-btn-loading");
      const formStatus = document.getElementById("hp-form-status");

      form.addEventListener("submit", async function (event) {
        event.preventDefault();

        btnText.classList.add("hidden");
        btnLoading.classList.remove("hidden");
        btnLoading.classList.add("flex");
        submitBtn.disabled = true;
        formStatus.classList.add("hidden");

        const formData = new FormData(this);

        const attachmentsHtml =
          hpUploadedFiles.length > 0
            ? hpUploadedFiles
                .map(
                  (f) => `
              <div style="margin-bottom: 12px; padding: 12px; background: white; border-radius: 8px; border: 1px solid #e5e7eb;">
                <a href="${f.url}" style="color: #00ff88; text-decoration: none; font-weight: 600;" target="_blank">
                  üìé ${f.name}.${f.format} (${hpFormatFileSize(f.size)})
                </a>
              </div>
            `
                )
                .join("")
            : "";

        // Build extended message with extra fields
        let fullMessage = formData.get("message");
        const company = formData.get("company");
        const projectType = formData.get("project_type");
        const budget = formData.get("budget");

        if (company) fullMessage += `\n\nFirma: ${company}`;
        if (projectType) fullMessage += `\nTyp projektu: ${projectType}`;
        if (budget) fullMessage += `\nBud≈ºet: ${budget}`;
        fullMessage += `\n≈πr√≥d≈Ço: Strona g≈Ç√≥wna`;

        try {
          const response = await fetch(API_ENDPOINT, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
              name: formData.get("user_name"),
              email: formData.get("user_email"),
              phone: formData.get("user_phone"),
              message: fullMessage,
              attachments: attachmentsHtml,
              domain: DOMAIN,
            }),
          });

          if (!response.ok) throw new Error("B≈ÇƒÖd wysy≈Çania");

          formStatus.innerHTML = `
            <div class="p-4 bg-accent/10 border border-accent/30 rounded-xl flex items-start gap-3">
              <svg class="w-6 h-6 text-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <p class="font-semibold text-accent">Wiadomo≈õƒá wys≈Çana!</p>
                <p class="text-sm text-muted">Dziƒôkujemy za kontakt. Odpowiemy w ciƒÖgu 24 godzin.</p>
              </div>
            </div>
          `;
          formStatus.classList.remove("hidden");

          form.reset();
          hpUploadedFiles = [];
          document.getElementById("hp-uploaded-files").innerHTML = "";

          setTimeout(() => formStatus.classList.add("hidden"), 8000);
        } catch (error) {
          formStatus.innerHTML = `
            <div class="p-4 bg-red-500/10 border border-red-500/30 rounded-xl flex items-start gap-3">
              <svg class="w-6 h-6 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <p class="font-semibold text-red-500">WystƒÖpi≈Ç b≈ÇƒÖd</p>
                <p class="text-sm text-muted">Spr√≥buj ponownie lub napisz na: kontakt@torweb.pl</p>
              </div>
            </div>
          `;
          formStatus.classList.remove("hidden");
          console.error("Error:", error);
        } finally {
          btnText.classList.remove("hidden");
          btnLoading.classList.add("hidden");
          submitBtn.disabled = false;
        }
      });
    }
  });
</script>
