<Layout 
  title="Portfolio - Realizacje | Strony, Aplikacje, Sklepy - TorWeb"
  description="Zobacz nasze realizacje: aplikacje webowe, sklepy internetowe, strony firmowe, platformy SaaS. Ponad 50 projektów dla klientów z całej Polski. Toruń, Bydgoszcz."
>
  <Navbar />
  <Breadcrumbs items={[{ label: "Realizacje" }]} />

  <!-- Hero Section -->
  <section class="pt-32 pb-12 md:pt-40 md:pb-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full glass text-accent-secondary text-sm font-mono mb-6">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
          </svg>
          &lt;portfolio /&gt;
        </div>
        
        <h1 class="font-display font-bold text-4xl md:text-5xl lg:text-6xl mb-6 text-heading">
          Nasze <span class="gradient-text">realizacje</span>
        </h1>
        
        <p class="text-xl text-muted max-w-3xl mx-auto mb-12">
          Od koncepcji do deploymentu - kompleksowe rozwiązania webowe dla firm z całej Polski. 
          Każdy projekt to unikalne wyzwanie i satysfakcja z dobrze wykonanej pracy.
        </p>
        
        <!-- Category Filter -->
        <div class="flex flex-wrap justify-center gap-3 mb-12" id="category-filter">
          {categories.map((cat, index) => (
            <button 
              data-category={cat.slug}
              class={`px-4 py-2 rounded-full text-sm font-medium transition-all duration-300 ${index === 0 ? 'bg-accent dark:bg-neon-green text-dark-950 active' : 'glass text-muted hover:border-accent/50 hover:text-body'}`}
            >
              {cat.name}
              <span class="ml-1 opacity-60">({cat.count})</span>
            </button>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Grid -->
  <section class="pb-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6" id="projects-grid">
        {projects.map((project, index) => (
          <div 
            class={`project-card group relative animate-on-scroll animate-delay-${(index % 6 + 1) * 100}`}
            data-category={project.categorySlug}
            data-project-id={project.id}
          >
            <div class="glass rounded-2xl overflow-hidden hover:border-accent transition-all duration-300 cursor-pointer h-full flex flex-col">
              <!-- Image -->
              <div class="aspect-video relative overflow-hidden bg-gradient-to-br dark:from-dark-800 dark:to-dark-900 from-slate-100 to-slate-200">
                {project.image ? (
                  <img 
                    src={project.image} 
                    alt={project.title}
                    class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    loading="lazy"
                  />
                ) : (
                  <div class="absolute inset-0 flex items-center justify-center">
                    <span class="text-6xl font-bold dark:text-white/5 text-slate-200">{project.title.substring(0, 2)}</span>
                  </div>
                )}
                <div class="absolute inset-0 bg-gradient-to-t dark:from-dark-950/90 from-white/90 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
                
                <!-- Year Badge -->
                <div class="absolute top-3 right-3 px-2 py-1 rounded-lg dark:bg-dark-950/80 bg-white/80 backdrop-blur-sm text-xs text-muted">
                  {project.year}
                </div>
              </div>
              
              <!-- Content -->
              <div class="p-6 flex-grow flex flex-col">
                <div class="flex items-start justify-between mb-2 gap-2">
                  <h3 class="font-display font-bold text-xl text-heading group-hover:text-accent transition-colors">{project.title}</h3>
                  {project.urlDisplay && (
                    <a 
                      href={project.link}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-sm text-accent hover:text-accent/80 hover:underline transition-colors flex-shrink-0"
                      onclick="event.stopPropagation();"
                    >
                      {project.urlDisplay}
                    </a>
                  )}
                </div>
                <p class="text-sm text-accent-secondary mb-3">{project.category}</p>
                <p class="text-muted text-sm mb-4 line-clamp-2 flex-grow">{project.description}</p>
                
                <!-- Technologies -->
                <div class="flex flex-wrap gap-2 mb-4">
                  {project.technologies.slice(0, 3).map(tech => (
                    <span class="text-xs px-2 py-1 bg-elevated rounded-lg text-faint font-mono">{tech}</span>
                  ))}
                  {project.technologies.length > 3 && (
                    <span class="text-xs px-2 py-1 bg-elevated rounded-lg text-faint font-mono">+{project.technologies.length - 3}</span>
                  )}
                </div>
                
                <!-- CTA -->
                <button class="project-trigger text-accent hover:text-accent/80 flex items-center gap-2 text-sm font-medium mt-auto group/btn">
                  Zobacz szczegóły
                  <svg class="w-4 h-4 group-hover/btn:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Project Modal -->
  <div id="project-modal" class="fixed inset-0 dark:bg-dark-950/80 bg-white/80 backdrop-blur-sm z-50 flex items-center justify-center p-4 opacity-0 pointer-events-none transition-opacity duration-300">
    <div class="glass border-theme rounded-2xl max-w-4xl w-full max-h-[90vh] overflow-hidden transform scale-95 transition-transform duration-300" id="modal-content">
      <!-- Modal Header -->
      <div class="sticky top-0 dark:bg-dark-900/95 bg-white/95 backdrop-blur p-6 border-b border-theme flex justify-between items-center z-10">
        <h3 class="font-display font-bold text-2xl text-heading" id="modal-title">Project Title</h3>
        <button id="modal-close" class="p-2 hover:bg-elevated rounded-lg transition-colors">
          <svg class="w-6 h-6 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      
      <!-- Modal Body -->
      <div class="p-6 overflow-y-auto max-h-[calc(90vh-80px)]" id="modal-body">
        <!-- Content will be injected by JS -->
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <section class="py-20 dark:bg-dark-900/50 bg-slate-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display font-bold text-3xl md:text-4xl text-heading mb-4">
        Twój projekt może być <span class="gradient-text">następny</span>
      </h2>
      <p class="text-lg text-muted mb-8">
        Porozmawiajmy o Twoich potrzebach. Bezpłatna konsultacja i wycena w 24h.
      </p>
      <a href="/kontakt" class="btn-primary">
        Rozpocznij projekt
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </section>
  <Footer />
</Layout>

<style>
  .project-card {
    opacity: 0;
    animation: fadeInUp 0.6s ease forwards;
  }
  
  .project-card.hidden {
    display: none;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  #project-modal.active {
    opacity: 1;
    pointer-events: auto;
  }
  
  #project-modal.active #modal-content {
    transform: scale(1);
  }
</style>

<script define:vars={{ projects }}>
  document.addEventListener('DOMContentLoaded', () => {
    const filterButtons = document.querySelectorAll('#category-filter button');
    const projectCards = document.querySelectorAll('.project-card');
    const modal = document.getElementById('project-modal');
    const modalTitle = document.getElementById('modal-title');
    const modalBody = document.getElementById('modal-body');
    const modalClose = document.getElementById('modal-close');
    
    // Category filtering
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const category = button.dataset.category;
        
        // Update active button
        filterButtons.forEach(btn => {
          btn.classList.remove('bg-accent', 'dark:bg-neon-green', 'text-dark-950', 'active');
          btn.classList.add('glass', 'text-muted');
        });
        button.classList.remove('glass', 'text-muted');
        button.classList.add('bg-accent', 'dark:bg-neon-green', 'text-dark-950', 'active');
        
        // Filter projects
        projectCards.forEach(card => {
          if (category === 'all' || card.dataset.category === category) {
            card.classList.remove('hidden');
            card.style.animation = 'none';
            card.offsetHeight;
            card.style.animation = null;
          } else {
            card.classList.add('hidden');
          }
        });
      });
    });
    
    // Project modal
    projectCards.forEach(card => {
      card.addEventListener('click', (e) => {
        if (e.target.closest('a')) return;
        
        const projectId = parseInt(card.dataset.projectId);
        const project = projects.find(p => p.id === projectId);
        
        if (project) {
          openModal(project);
        }
      });
    });
    
    function openModal(project) {
      modalTitle.textContent = project.title;
      
      let statsHtml = '';
      if (project.stats) {
        statsHtml = `
          <div class="grid grid-cols-3 gap-4 mb-6">
            ${Object.entries(project.stats).map(([key, value]) => `
              <div class="bg-elevated p-4 rounded-xl text-center">
                <div class="text-xl font-bold gradient-text">${value}</div>
                <div class="text-sm text-muted capitalize">${key.replace('_', ' ')}</div>
              </div>
            `).join('')}
          </div>
        `;
      }
      
      modalBody.innerHTML = `
        <div class="aspect-video relative bg-gradient-to-br dark:from-dark-800 dark:to-dark-900 from-slate-100 to-slate-200 rounded-xl overflow-hidden mb-6">
          ${project.image ? `<img src="${project.image}" alt="${project.title}" class="w-full h-full object-cover" />` : 
          `<div class="flex items-center justify-center h-full"><span class="text-8xl font-bold dark:text-white/5 text-slate-200">${project.title.substring(0, 2)}</span></div>`}
        </div>
        
        <div class="flex flex-wrap items-center gap-4 mb-6">
          <span class="px-3 py-1 dark:bg-neon-green/20 bg-emerald-500/20 text-accent rounded-full text-sm">${project.category}</span>
          <span class="flex items-center gap-1 text-muted text-sm">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            ${project.year}
          </span>
          ${project.urlDisplay ? `
            <a href="${project.link}" target="_blank" rel="noopener noreferrer" class="ml-auto text-accent hover:text-accent/80 hover:underline text-sm font-medium">
              ${project.urlDisplay}
            </a>
          ` : ''}
        </div>
        
        <p class="text-muted mb-6 leading-relaxed">${project.fullDescription}</p>
        
        ${statsHtml}
        
        <div class="mb-6">
          <h4 class="text-lg font-semibold text-heading mb-4">Funkcjonalności</h4>
          <div class="grid md:grid-cols-2 gap-3">
            ${project.features.map(feature => `
              <div class="flex items-start gap-2">
                <span class="w-2 h-2 bg-accent dark:bg-neon-green rounded-full mt-2 flex-shrink-0"></span>
                <span class="text-muted text-sm">${feature}</span>
              </div>
            `).join('')}
          </div>
        </div>
        
        <div>
          <h4 class="text-lg font-semibold text-heading mb-4">Technologie</h4>
          <div class="flex flex-wrap gap-2">
            ${project.technologies.map(tech => `
              <span class="px-3 py-2 bg-elevated rounded-lg text-sm text-body font-mono">${tech}</span>
            `).join('')}
          </div>
        </div>
      `;
      
      modal.classList.add('active');
      document.body.style.overflow = 'hidden';
      history.pushState({ modal: true }, '');
    }
    
    function closeModal() {
      modal.classList.remove('active');
      document.body.style.overflow = '';
    }
    
    modalClose.addEventListener('click', closeModal);
    
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeModal();
        if (history.state?.modal) {
          history.back();
        }
      }
    });
    
    window.addEventListener('popstate', () => {
      if (modal.classList.contains('active')) {
        closeModal();
      }
    });
    
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal.classList.contains('active')) {
        closeModal();
        if (history.state?.modal) {
          history.back();
        }
      }
    });
  });
</script>