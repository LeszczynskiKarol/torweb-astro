import ServiceLayout from '../../layouts/ServiceLayout.astro';

const faqs = [
  {
    question: "Ile kosztuje stworzenie strony internetowej?",
    answer: "Cena strony internetowej zależy od jej złożoności i funkcjonalności. Proste strony wizytówki zaczynają się od 2500 zł, rozbudowane strony firmowe od 5000 zł, a zaawansowane platformy z panelem CMS od 8000 zł. Każdy projekt wyceniamy indywidualnie po analizie potrzeb."
  },
  {
    question: "Jak długo trwa tworzenie strony internetowej?",
    answer: "Standardowa strona firmowa powstaje w 2-4 tygodnie. Proste strony wizytówki realizujemy nawet w 5-7 dni roboczych. Rozbudowane projekty z dedykowanymi funkcjonalnościami mogą trwać 6-8 tygodni. Dokładny termin ustalamy po analizie zakresu projektu."
  },
  {
    question: "Czy strona będzie responsywna i działać na telefonach?",
    answer: "Tak, wszystkie nasze strony są w pełni responsywne i zoptymalizowane pod urządzenia mobilne. Projektujemy w podejściu mobile-first, co oznacza że strona idealnie wyświetla się na smartfonach, tabletach i komputerach. Google premiuje strony mobilne w wynikach wyszukiwania."
  },
  {
    question: "Czy mogę samodzielnie edytować treści na stronie?",
    answer: "Tak, implementujemy intuicyjne systemy zarządzania treścią (CMS), które pozwalają na samodzielną edycję tekstów, zdjęć i innych elementów bez znajomości programowania. Zapewniamy również szkolenie z obsługi panelu administracyjnego."
  },
  {
    question: "Czy strona będzie zoptymalizowana pod SEO?",
    answer: "Tak, każda strona powstaje z myślą o pozycjonowaniu. Implementujemy techniczne SEO: optymalizację szybkości, poprawną strukturę nagłówków, meta tagi, schema markup, sitemap XML, oraz optymalizację Core Web Vitals. To solidna baza pod dalsze działania SEO."
  },
  {
    question: "Co obejmuje hosting i utrzymanie strony?",
    answer: "Oferujemy kompleksową opiekę nad stroną: szybki hosting SSD, certyfikat SSL, regularne backupy, aktualizacje bezpieczeństwa, monitoring dostępności 24/7, oraz wsparcie techniczne. Pakiety zaczynają się od 99 zł/miesiąc."
  },
  {
    question: "Jakich technologii używacie do tworzenia stron?",
    answer: "Wykorzystujemy nowoczesne technologie: Astro, Next.js, React dla dynamicznych aplikacji, oraz headless CMS (Strapi, Sanity) dla łatwego zarządzania treścią. Dla prostszych projektów stosujemy WordPress z własnym motywem. Dobieramy technologię do potrzeb projektu."
  },
  {
    question: "Czy pomagacie w przygotowaniu treści i zdjęć?",
    answer: "Tak, oferujemy kompleksowe wsparcie contentowe: copywriting stron, optymalizację tekstów pod SEO, pozyskanie lub stworzenie grafik i zdjęć stockowych, oraz przygotowanie materiałów do social media. Możemy też przeprowadzić sesję zdjęciową."
  }
];

const features = [
  {
    icon: "responsive",
    title: "Responsywność Mobile-First",
    description: "Strony projektowane z priorytetem dla urządzeń mobilnych. Perfekcyjne wyświetlanie na każdym ekranie."
  },
  {
    icon: "speed",
    title: "Błyskawiczna Szybkość",
    description: "Optymalizacja Core Web Vitals. Czas ładowania poniżej 2 sekund dla najlepszego UX i SEO."
  },
  {
    icon: "seo",
    title: "SEO w DNA",
    description: "Techniczne SEO wbudowane od podstaw: struktura, meta tagi, schema markup, sitemap XML."
  },
  {
    icon: "cms",
    title: "Łatwa Edycja Treści",
    description: "Intuicyjny panel CMS do samodzielnej aktualizacji treści bez pomocy programisty."
  },
  {
    icon: "security",
    title: "Bezpieczeństwo",
    description: "Certyfikat SSL, regularne backupy, ochrona przed atakami i monitoring 24/7."
  },
  {
    icon: "analytics",
    title: "Analityka i Konwersje",
    description: "Integracja Google Analytics 4, śledzenie celów i optymalizacja pod konwersje."
  }
];

const process = [
  {
    step: 1,
    title: "Analiza i Brief",
    description: "Poznajemy Twój biznes, cele i konkurencję. Definiujemy funkcjonalności i strukturę strony.",
    duration: "1-2 dni"
  },
  {
    step: 2,
    title: "Projekt UX/UI",
    description: "Tworzymy wireframe'y i projekt graficzny. Iterujemy aż do pełnej akceptacji.",
    duration: "3-5 dni"
  },
  {
    step: 3,
    title: "Kodowanie",
    description: "Programujemy stronę w nowoczesnych technologiach z dbałością o każdy detal.",
    duration: "5-10 dni"
  },
  {
    step: 4,
    title: "Testy i Optymalizacja",
    description: "Testujemy na wszystkich urządzeniach, optymalizujemy szybkość i SEO.",
    duration: "2-3 dni"
  },
  {
    step: 5,
    title: "Wdrożenie",
    description: "Publikujemy stronę, konfigurujemy hosting, SSL i narzędzia analityczne.",
    duration: "1 dzień"
  }
];

const pricing = [
  {
    name: "Strona Wizytówka",
    price: "od 2 500",
    description: "Idealna dla freelancerów i małych firm",
    features: [
      "Do 5 podstron",
      "Responsywny design",
      "Formularz kontaktowy",
      "Podstawowe SEO",
      "Certyfikat SSL",
      "Hosting na 1 rok"
    ],
    popular: false
  },
  {
    name: "Strona Firmowa",
    price: "od 5 000",
    description: "Dla firm potrzebujących profesjonalnej prezentacji",
    features: [
      "Do 15 podstron",
      "Panel CMS",
      "Blog firmowy",
      "Zaawansowane SEO",
      "Google Analytics 4",
      "Integracje (mapy, social)",
      "Szkolenie z obsługi"
    ],
    popular: true
  },
  {
    name: "Strona Premium",
    price: "od 10 000",
    description: "Zaawansowane rozwiązania dla wymagających",
    features: [
      "Nielimitowane podstrony",
      "Dedykowane funkcjonalności",
      "Wielojęzyczność",
      "Zaawansowane animacje",
      "System rezerwacji/kalendarza",
      "Integracje API",
      "Priorytetowe wsparcie"
    ],
    popular: false
  }
];


