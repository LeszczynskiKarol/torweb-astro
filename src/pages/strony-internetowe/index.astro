              <div class="flex-grow pb-8">
                <div class="flex items-center gap-4 mb-2">
                  <h3 class="text-xl font-semibold text-heading">{step.title}</h3>
                  <span class="text-xs text-accent bg-accent/10 px-3 py-1 rounded-full">{step.duration}</span>
                </div>
                <p class="text-muted">{step.description}</p>
