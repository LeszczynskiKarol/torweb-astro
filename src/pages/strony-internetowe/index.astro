  <!-- Process Section -->
  <section class="py-20 bg-elevated">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-heading mb-4">
          Proces tworzenia <span class="text-accent">strony</span>
        </h2>
        <p class="text-lg text-muted max-w-2xl mx-auto">
          Sprawdzony proces, który gwarantuje terminową realizację i najwyższą jakość.
        </p>
      </div>
      
      <div class="relative">
        <!-- Timeline line -->
        <div class="absolute left-8 top-0 bottom-0 w-px bg-gradient-to-b from-accent via-accent/50 to-transparent hidden md:block"></div>
        
        <div class="space-y-8">
          {process.map((step, index) => (
            <div class="relative flex gap-8 animate-on-scroll" style={`animation-delay: ${index * 150}ms`}>
              <div class="flex-shrink-0 w-16 h-16 rounded-full bg-accent/20 border-2 border-accent flex items-center justify-center text-accent font-bold text-xl relative z-10">
                {step.step}
