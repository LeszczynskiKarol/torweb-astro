const integrations = [
  { category: "Płatności", items: ["Przelewy24", "PayU", "Stripe", "BLIK", "PayPo", "Klarna"] },
  { category: "Dostawy", items: ["InPost", "DPD", "DHL", "Poczta Polska", "FedEx", "Orlen Paczka"] },
  { category: "ERP/WMS", items: ["BaseLinker", "Subiekt GT", "Comarch ERP", "SAP", "Magazyn XL"] },
  { category: "Marketing", items: ["Google Ads", "Meta Pixel", "Klaviyo", "Mailchimp", "edrone"] },
  { category: "Marketplace", items: ["Allegro", "Amazon", "Ceneo", "Google Shopping", "Facebook Shop"] }
