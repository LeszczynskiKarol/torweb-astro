const process = [
  {
    phase: "Discovery",
    duration: "1-2 tygodnie",
    activities: ["Analiza rynku i konkurencji", "Audyt obecnego rozwiązania", "Mapowanie procesów biznesowych", "Wybór platformy i integracji", "Specyfikacja techniczna"]
  },
  {
    phase: "Design",
    duration: "2-3 tygodnie",
    activities: ["Architektura informacji", "Wireframes kluczowych stron", "Design system i UI", "Projekt karty produktu", "Optymalizacja checkout"]
  },
  {
    phase: "Development",
    duration: "4-8 tygodni",
    activities: ["Konfiguracja platformy", "Import produktów", "Integracje płatności/dostaw", "Testy funkcjonalne", "Optymalizacja wydajności"]
  },
  {
    phase: "Launch",
