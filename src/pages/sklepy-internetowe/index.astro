];

const pricing = [
  {
    name: "Starter",
    price: "od 6 000",
    description: "Shopify / WooCommerce basic",
    features: [
      "Do 100 produktów",
      "Gotowy szablon premium",
      "Integracja 1 płatność + 1 dostawa",
      "Podstawowe SEO",
      "Import produktów",
      "Szkolenie z obsługi",
      "30 dni wsparcia"
    ],
    popular: false
  },
  {
    name: "Professional",
    price: "od 15 000",
    description: "Rozbudowany sklep z integracjami",
    features: [
      "Do 1000 produktów",
      "Dedykowany design",
      "Multi-payment & multi-carrier",
      "Integracja ERP/BaseLinker",
      "Zaawansowane SEO",
      "Blog + content marketing",
      "GA4 Enhanced E-commerce",
      "3 miesiące wsparcia"
    ],
    popular: true
  },
  {
    name: "Enterprise",
    price: "od 40 000",
    description: "Platforma e-commerce na skalę",
    features: [
      "Nielimitowane produkty",
      "Headless / Custom development",
      "B2B + B2C w jednym",
      "Multi-store / Multi-currency",
      "Marketplace / Dropshipping",
      "Dedykowany PM",
      "SLA + wsparcie priorytetowe",
      "Ciągły rozwój produktu"
    ],
    popular: false
  }
];

const stats = [
  { value: "50+", label: "Wdrożonych sklepów" },
  { value: "15M+", label: "PLN obrotu klientów" },
  { value: "3.2%", label: "Średni CR po optymalizacji" },
