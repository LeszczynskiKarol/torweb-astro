        </div>
        
      <div class="relative">
  <!-- Code Preview -->
  <div class="relative rounded-2xl overflow-hidden border border-theme bg-dark-950 p-4 font-mono text-sm">
    <div class="flex items-center gap-2 mb-4">
      <span class="w-3 h-3 rounded-full bg-red-500"></span>
      <span class="w-3 h-3 rounded-full bg-yellow-500"></span>
      <span class="w-3 h-3 rounded-full bg-green-500"></span>
      <span class="text-xs text-gray-500 ml-4">app/api/route.ts</span>
    </div>
    <pre class="text-gray-300 overflow-hidden"><code set:html={`<span class="text-purple-400">import</span> { NextResponse } <span class="text-purple-400">from</span> <span class="text-green-400">'next/server'</span>

