  database: ["PostgreSQL", "MongoDB", "Redis", "Prisma ORM"],
  cloud: ["AWS", "Vercel", "Docker", "Kubernetes", "GitHub Actions"]
};

const pricing = [
  {
    name: "MVP / Startup",
    price: "od 15 000",
    description: "Pierwsza wersja produktu",
    features: [
      "Core features",
      "Do 10 ekranów",
      "Podstawowa autoryzacja",
