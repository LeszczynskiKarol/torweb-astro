---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

const contactInfo = {
  phone: "+48 509 370 772",
  email: "kontakt@torweb.pl",
  hours: "Pon-Pt: 9:00 - 17:00"
};
---

<Layout 
  title="Kontakt | TorWeb.pl - Agencja Interaktywna Toru"
  description="Skontaktuj si z nami. Bezpatna wycena projektu w 24h. Telefon: 509 370 772, Email: kontakt@torweb.pl. Strony internetowe, sklepy, aplikacje webowe."
>
  <Navbar />
  <Breadcrumbs items={[{ label: "Kontakt" }]} />
  
  <main class="pb-20">
    <!-- Hero -->
    <section class="py-12 md:py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-accent/10 border border-accent/20 text-accent text-sm font-medium mb-6">
            <span class="w-2 h-2 rounded-full bg-accent animate-pulse"></span>
            Odpowiadamy w 24 godz.
          </div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-heading mb-6">
            Porozmawiajmy o<br>
            <span class="text-accent">Twoim projekcie</span>
          </h1>
          <p class="text-xl text-muted">
            Wypenij formularz lub zadzwo. Przygotujemy bezpatn wycen i odpowiemy na wszystkie pytania.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Grid -->
    <section class="py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-5 gap-12">
          
          <!-- Contact Info - Left Column -->
          <div class="lg:col-span-2 space-y-8">
            <div class="bg-card border border-theme rounded-2xl p-8">
              <h2 class="text-2xl font-bold text-heading mb-8">Dane kontaktowe</h2>
              
              <div class="space-y-6">
                <!-- Phone -->
                <a href={`tel:${contactInfo.phone.replace(/\s/g, '')}`} class="flex items-start gap-4 group">
                  <div class="w-12 h-12 rounded-xl bg-accent/10 flex items-center justify-center flex-shrink-0 group-hover:bg-accent/20 transition-colors">
                    <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                  </div>
                  <div>
                    <div class="text-sm text-muted mb-1">Telefon</div>
                    <div class="text-lg font-semibold text-heading group-hover:text-accent transition-colors">
                      {contactInfo.phone}
                    </div>
                  </div>
                </a>

                <!-- Email -->
                <a href={`mailto:${contactInfo.email}`} class="flex items-start gap-4 group">
                  <div class="w-12 h-12 rounded-xl bg-accent/10 flex items-center justify-center flex-shrink-0 group-hover:bg-accent/20 transition-colors">
                    <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  </div>
                  <div>
                    <div class="text-sm text-muted mb-1">Email</div>
                    <div class="text-lg font-semibold text-heading group-hover:text-accent transition-colors">
                      {contactInfo.email}
                    </div>
                  </div>
                </a>

                <!-- Hours -->
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 rounded-xl bg-accent/10 flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                  <div>
                    <div class="text-sm text-muted mb-1">Godziny pracy</div>
                    <div class="text-lg font-semibold text-heading">
                      {contactInfo.hours}
                    </div>
                  </div>
                </div>

                <!-- NIP & REGON -->
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 rounded-xl bg-accent/10 flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                  </div>
                  <div>
                    <div class="text-sm text-muted mb-1">Dane firmy</div>
                    <div class="text-heading">
                      <span class="font-semibold">NIP:</span> 9562203948
                    </div>
                    <div class="text-heading">
                      <span class="font-semibold">REGON:</span> 340627879
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Info Box -->
            <div class="bg-accent/5 border border-accent/20 rounded-2xl p-6">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-lg bg-accent/20 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-heading mb-1">Bezpatna wycena</h3>
                  <p class="text-sm text-muted">
                    Opisz sw贸j projekt w formularzu. Przygotujemy szczeg贸ow wycen i propozycj rozwizania w cigu 24 godzin.
                  </p>
                </div>
              </div>
            </div>

            <!-- Quick Stats -->
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-card border border-theme rounded-xl p-4 text-center">
                <div class="text-2xl font-bold text-accent mb-1">100+</div>
                <div class="text-sm text-muted">Projekt贸w</div>
              </div>
              <div class="bg-card border border-theme rounded-xl p-4 text-center">
                <div class="text-2xl font-bold text-accent mb-1">15+</div>
                <div class="text-sm text-muted">Lat dowiadczenia</div>
              </div>
            </div>
          </div>

          <!-- Form - Right Column -->
          <div class="lg:col-span-3">
            <div class="bg-card border border-theme rounded-2xl p-8">
              <h2 class="text-2xl font-bold text-heading mb-6">Formularz kontaktowy</h2>
              
              <form id="contact-form" class="space-y-6">
                <div class="grid md:grid-cols-2 gap-6">
                  <div>
                    <label for="user_name" class="block text-sm font-medium text-body mb-2">
                      Imi i nazwisko *
                    </label>
                    <input 
                      type="text" 
                      id="user_name" 
                      name="user_name" 
                      required
                      class="w-full px-4 py-3 bg-elevated border border-theme rounded-xl text-body placeholder-muted focus:ring-2 focus:ring-accent focus:border-transparent transition-all"
                      placeholder="Jan Kowalski"
                    />
                  </div>
                  <div>
                    <label for="user_email" class="block text-sm font-medium text-body mb-2">
                      Email *
                    </label>
                    <input 
                      type="email" 
                      id="user_email" 
                      name="user_email" 
                      required
                      class="w-full px-4 py-3 bg-elevated border border-theme rounded-xl text-body placeholder-muted focus:ring-2 focus:ring-accent focus:border-transparent transition-all"
                      placeholder="jan@example.com"
                    />
                  </div>
                </div>

                <div class="grid md:grid-cols-2 gap-6">
                  <div>
                    <label for="user_phone" class="block text-sm font-medium text-body mb-2">
                      Telefon
                    </label>
                    <input 
                      type="tel" 
                      id="user_phone" 
                      name="user_phone"
                      class="w-full px-4 py-3 bg-elevated border border-theme rounded-xl text-body placeholder-muted focus:ring-2 focus:ring-accent focus:border-transparent transition-all"
                      placeholder="509 370 772"
                    />
                  </div>
                  <div>
                    <label for="project_type" class="block text-sm font-medium text-body mb-2">
                      Typ projektu
                    </label>
                    <select 
                      id="project_type" 
                      name="project_type"
                      class="w-full px-4 py-3 bg-elevated border border-theme rounded-xl text-body focus:ring-2 focus:ring-accent focus:border-transparent transition-all"
                    >
                      <option value="">Wybierz...</option>
                      <option value="strona-www">Strona internetowa</option>
                      <option value="sklep">Sklep internetowy</option>
                      <option value="aplikacja">Aplikacja webowa</option>
                      <option value="integracja-ai">Integracja AI</option>
                      <option value="automatyzacja">Automatyzacja</option>
                      <option value="migracja">Migracja sklepu</option>
                      <option value="inne">Inne</option>
                    </select>
                  </div>
                </div>

                <div>
                  <label for="budget" class="block text-sm font-medium text-body mb-2">
                    Orientacyjny bud偶et
                  </label>
                  <select 
                    id="budget" 
                    name="budget"
                    class="w-full px-4 py-3 bg-elevated border border-theme rounded-xl text-body focus:ring-2 focus:ring-accent focus:border-transparent transition-all"
                  >
                    <option value="">Wybierz...</option>
                    <option value="2500-5000">2 500 - 5 000 z</option>
                    <option value="5000-10000">5 000 - 10 000 z</option>
                    <option value="10000-25000">10 000 - 25 000 z</option>
                    <option value="25000+">Powy偶ej 25 000 z</option>
                    <option value="nie-wiem">Nie wiem jeszcze</option>
                  </select>
                </div>

                <div>
                  <label for="message" class="block text-sm font-medium text-body mb-2">
                    Wiadomo *
                  </label>
                  <textarea 
                    id="message" 
                    name="message" 
                    rows="5" 
                    required
                    class="w-full px-4 py-3 bg-elevated border border-theme rounded-xl text-body placeholder-muted focus:ring-2 focus:ring-accent focus:border-transparent transition-all resize-none"
                    placeholder="Opisz sw贸j projekt, cele biznesowe, oczekiwania..."
                  ></textarea>
                </div>

                <!-- File Upload - POPRAWIONY -->
                <div>
                  <label class="block text-sm font-medium text-body mb-2">
                    Zaczniki <span class="text-muted font-normal">(max. 5 plik贸w, 10MB ka偶dy)</span>
                  </label>
                  <div 
                    id="file-upload-area" 
                    class="border-2 border-dashed border-theme rounded-xl p-6 text-center hover:border-accent/50 transition-colors cursor-pointer bg-elevated"
                  >
                    <svg class="w-10 h-10 mx-auto text-muted mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                    </svg>
                    <p class="text-body mb-1">Przecignij pliki lub kliknij aby wybra</p>
                    <p class="text-sm text-muted">JPG, PNG, PDF, DOC (max. 10MB)</p>
                  </div>
                  <div id="uploaded-files" class="mt-3 space-y-2"></div>
                  <input type="hidden" id="attachment_urls" name="attachment_urls" />
                </div>

                <!-- Privacy -->
                <div class="flex items-start gap-3">
                  <input 
                    type="checkbox" 
                    id="privacy" 
                    name="privacy" 
                    required
                    class="mt-1 w-5 h-5 text-accent bg-elevated border-theme rounded focus:ring-accent"
                  />
                  <label for="privacy" class="text-sm text-muted">
                    Wyra偶am zgod na przetwarzanie moich danych osobowych zgodnie z 
                    <a href="/polityka-prywatnosci" class="text-accent hover:underline">polityk prywatnoci</a> *
                  </label>
                </div>

                <!-- Submit Button -->
                <button 
                  type="submit"
                  id="submit-btn"
                  class="w-full btn-primary py-4 text-lg font-semibold"
                >
                  <span id="btn-text" class="flex items-center justify-center gap-2">
                    Wylij wiadomo
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                    </svg>
                  </span>
                  <span id="btn-loading" class="hidden items-center justify-center gap-2">
                    <svg class="animate-spin h-5 w-5" viewBox="0 0 24 24">
                      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none"></circle>
                      <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    Wysyanie...
                  </span>
                </button>

                <!-- Status Message -->
                <div id="form-status" class="hidden"></div>

                <p class="text-xs text-muted text-center">
                  * Pola wymagane
                </p>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<!-- EmailJS -->
<script is:inline src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>
<!-- Cloudinary Upload Widget -->
<script is:inline src="https://upload-widget.cloudinary.com/global/all.js"></script>

<script is:inline>
  // ========================================
  // KONFIGURACJA TORWEB.PL
  // ========================================
  
  const EMAILJS_PUBLIC_KEY = "gjau8dneW58l9l3tz";
  const EMAILJS_SERVICE_ID = "service_y4gw1yd";
  const EMAILJS_TEMPLATE_ID = "template_x90lsb5";
  
  const CLOUDINARY_CLOUD_NAME = "drpll3ho2";
  const CLOUDINARY_UPLOAD_PRESET = "torweb";

  // ========================================
  // INICJALIZACJA
  // ========================================
  
  if (typeof emailjs !== 'undefined') {
    emailjs.init(EMAILJS_PUBLIC_KEY);
  }
  
  let uploadedFiles = [];
  let myWidget = null;

  // ========================================
  // CLOUDINARY UPLOAD WIDGET
  // ========================================
  
  function initCloudinary() {
    if (typeof cloudinary !== 'undefined' && !myWidget) {
      myWidget = cloudinary.createUploadWidget(
        {
          cloudName: CLOUDINARY_CLOUD_NAME,
          uploadPreset: CLOUDINARY_UPLOAD_PRESET,
          sources: ['local', 'url', 'camera'],
          multiple: true,
          maxFiles: 5,
          maxFileSize: 10485760,
          resourceType: 'auto',
          clientAllowedFormats: ['jpg', 'jpeg', 'png', 'pdf', 'doc', 'docx'],
          showPoweredBy: false,
          language: 'pl',
          styles: {
            palette: {
              window: "#0d0e10",
              windowBorder: "#00ff88",
              tabIcon: "#00ff88",
              menuIcons: "#00ff88",
              textDark: "#ffffff",
              textLight: "#ffffff",
              link: "#00ff88",
              action: "#00ff88",
              inactiveTabIcon: "#666666",
              error: "#ef4444",
              inProgress: "#00ff88",
              complete: "#10b981",
              sourceBg: "#1a1b1e"
            }
          }
        },
        (error, result) => {
          if (!error && result && result.event === "success") {
            const fileInfo = {
              url: result.info.secure_url,
              name: result.info.original_filename,
              size: result.info.bytes,
              format: result.info.format
            };
            uploadedFiles.push(fileInfo);
            document.getElementById('attachment_urls').value = uploadedFiles.map(f => f.url).join(',');
            displayUploadedFile(fileInfo);
          }
        }
      );
    }
  }

  // ========================================
  // FUNKCJE POMOCNICZE
  // ========================================
  
  function displayUploadedFile(fileInfo) {
    const container = document.getElementById('uploaded-files');
    const fileElement = document.createElement('div');
    fileElement.className = 'flex items-center justify-between p-3 bg-elevated rounded-lg border border-theme';
    fileElement.innerHTML = `
      <div class="flex items-center gap-3">
        <span class="text-xl"></span>
        <div>
          <p class="text-sm font-medium text-body">${fileInfo.name}.${fileInfo.format}</p>
          <p class="text-xs text-muted">${formatFileSize(fileInfo.size)}</p>
        </div>
      </div>
      <button type="button" class="text-red-500 hover:text-red-400 transition-colors" data-url="${fileInfo.url}">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    `;
    container.appendChild(fileElement);
    
    fileElement.querySelector('button').addEventListener('click', function() {
      removeFile(this.dataset.url, fileElement);
    });
  }

  function removeFile(url, element) {
    uploadedFiles = uploadedFiles.filter(f => f.url !== url);
    document.getElementById('attachment_urls').value = uploadedFiles.map(f => f.url).join(',');
    element.remove();
  }

  function formatFileSize(bytes) {
    if (bytes === 0) return '0 Bytes';
    const k = 1024;
    const sizes = ['Bytes', 'KB', 'MB'];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
  }

  function openUploadWidget() {
    if (myWidget) {
      myWidget.open();
    } else {
      initCloudinary();
      setTimeout(() => {
        if (myWidget) myWidget.open();
      }, 200);
    }
  }

  // ========================================
  // EVENT LISTENERS
  // ========================================
  
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize Cloudinary
    initCloudinary();
    
    // Retry if not loaded yet
    if (!myWidget) {
      setTimeout(initCloudinary, 500);
    }
    
    // CAY OBSZAR UPLOADU KLIKALNY
    const uploadArea = document.getElementById('file-upload-area');
    if (uploadArea) {
      uploadArea.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        openUploadWidget();
      });

      // Drag and drop
      uploadArea.addEventListener('dragover', (e) => {
        e.preventDefault();
        uploadArea.classList.add('border-accent', 'bg-accent/5');
      });
      
      uploadArea.addEventListener('dragleave', () => {
        uploadArea.classList.remove('border-accent', 'bg-accent/5');
      });
      
      uploadArea.addEventListener('drop', (e) => {
        e.preventDefault();
        uploadArea.classList.remove('border-accent', 'bg-accent/5');
        openUploadWidget();
      });
    }

    // Form submission
    const form = document.getElementById('contact-form');
    if (form) {
      const submitBtn = document.getElementById('submit-btn');
      const btnText = document.getElementById('btn-text');
      const btnLoading = document.getElementById('btn-loading');
      const formStatus = document.getElementById('form-status');

      form.addEventListener('submit', function(event) {
        event.preventDefault();
        
        // Loading state
        btnText.classList.add('hidden');
        btnLoading.classList.remove('hidden');
        btnLoading.classList.add('flex');
        submitBtn.disabled = true;
        formStatus.classList.add('hidden');
        
        // Prepare data
        const formData = new FormData(this);
        const templateParams = {
          user_name: formData.get('user_name'),
          user_email: formData.get('user_email'),
          user_phone: formData.get('user_phone') || 'Nie podano',
          project_type: formData.get('project_type') || 'Nie wybrano',
          budget: formData.get('budget') || 'Nie podano',
          message: formData.get('message'),
          attachments: uploadedFiles.length > 0 
            ? uploadedFiles.map(f => `${f.name}.${f.format}: ${f.url}`).join('\n')
            : 'Brak zacznik贸w',
          source: 'Strona /kontakt'
        };
        
        // Send via EmailJS
        emailjs.send(EMAILJS_SERVICE_ID, EMAILJS_TEMPLATE_ID, templateParams)
          .then(function() {
            // Success message
            formStatus.innerHTML = `
              <div class="p-4 bg-accent/10 border border-accent/30 rounded-xl flex items-start gap-3">
                <svg class="w-6 h-6 text-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <p class="font-semibold text-accent">Wiadomo wysana!</p>
                  <p class="text-sm text-muted">Dzikujemy za kontakt. Odpowiemy w cigu 24 godzin.</p>
                </div>
              </div>
            `;
            formStatus.classList.remove('hidden');
            
            // Reset form
            form.reset();
            uploadedFiles = [];
            document.getElementById('uploaded-files').innerHTML = '';
            document.getElementById('attachment_urls').value = '';
            
            btnText.classList.remove('hidden');
            btnLoading.classList.add('hidden');
            submitBtn.disabled = false;
            
            setTimeout(() => formStatus.classList.add('hidden'), 8000);
          })
          .catch(function(error) {
            // Error message
            formStatus.innerHTML = `
              <div class="p-4 bg-red-500/10 border border-red-500/30 rounded-xl flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <p class="font-semibold text-red-500">Wystpi bd</p>
                  <p class="text-sm text-muted">Spr贸buj ponownie lub napisz na: kontakt@torweb.pl</p>
                </div>
              </div>
            `;
            formStatus.classList.remove('hidden');
            
            btnText.classList.remove('hidden');
            btnLoading.classList.add('hidden');
            submitBtn.disabled = false;
            
            console.error('EmailJS error:', error);
          });
      });
    }
  });
</script>