---
// src/pages/blog/index.astro
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

// Pobierz wszystkie posty, posortowane od najnowszych
const allPosts = await getCollection('blog', ({ data }) => {
  // W produkcji nie pokazuj drafts
  return import.meta.env.PROD ? data.draft !== true : true;
});

const posts = allPosts.sort((a, b) => 
  b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

// Kategorie z licznikiem
const categories = posts.reduce((acc, post) => {
  const cat = post.data.category;
  acc[cat] = (acc[cat] || 0) + 1;
  return acc;
}, {} as Record<string, number>);

// Format daty
const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('pl-PL', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  }).format(date);
};

// Czas czytania
const getReadingTime = (content: string) => {
  const words = content.split(/\s+/).length;
  return Math.ceil(words / 200);
};

// Schema.org
const schema = {
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "Blog TorWeb.pl",
  "description": "Praktyczna wiedza o tworzeniu stron internetowych, sklepów e-commerce, aplikacji webowych i integracji AI.",
  "url": "https://torweb.pl/blog",
  "publisher": {
    "@type": "Organization",
    "name": "TorWeb.pl",
    "logo": {
      "@type": "ImageObject",
      "url": "https://torweb.pl/logo.png"
    }
  }
};
---

<Layout 
  title="Blog | TorWeb.pl - Wiedza o stronach i aplikacjach webowych"
  description="Praktyczne porady o tworzeniu stron internetowych, sklepów e-commerce, aplikacjach webowych i integracji AI. Dowiedz się jak rozwijać swoją firmę online."
>
<Navbar />
  <script type="application/ld+json" set:html={JSON.stringify(schema)} slot="head" />
  
  <main class="pt-32 pb-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Header -->
      <header class="text-center mb-16">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-heading mb-6">
          Blog <span class="text-gradient">TorWeb</span>
        </h1>
        <p class="text-lg sm:text-xl text-muted max-w-2xl mx-auto">
          Praktyczna wiedza o tworzeniu stron, sklepów i aplikacji webowych. 
          Porady, case study i nowinki technologiczne.
        </p>
      </header>
      
      <!-- Categories Filter -->
      <div class="flex flex-wrap justify-center gap-3 mb-12">
        <a 
          href="/blog" 
          class="px-4 py-2 text-sm font-medium bg-accent text-black dark:text-white rounded-full"
        >
          Wszystkie ({posts.length})
        </a>
        {Object.entries(categories).map(([category, count]) => (
          <a 
            href={`/blog/kategoria/${category.toLowerCase().replace(/\s+/g, '-')}`}
            class="px-4 py-2 text-sm font-medium bg-elevated border border-theme text-muted rounded-full hover:border-accent hover:text-accent transition-colors"
          >
            {category} ({count})
          </a>
        ))}
      </div>
      
      <!-- All Posts Grid -->
      <section>
        {posts.length === 0 ? (
          <div class="text-center py-16 bg-card border border-theme rounded-2xl">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-accent/10 flex items-center justify-center">
              <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-heading mb-2">Brak artykułów</h3>
            <p class="text-muted">Artykuły pojawią się tutaj wkrótce.</p>
          </div>
        ) : (
          <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {posts.map(post => (
              <a 
                href={`/blog/${post.slug}`}
                class="group block bg-card border border-theme rounded-xl overflow-hidden hover:border-accent/50 transition-all duration-300"
              >
                {post.data.image ? (
                  <div class="aspect-video bg-elevated overflow-hidden">
                    <img 
                      src={post.data.image} 
                      alt={post.data.imageAlt || post.data.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                      loading="lazy"
                    />
                  </div>
                ) : (
                  <div class="aspect-video bg-gradient-to-br from-emerald-500/20 to-sky-500/20 flex items-center justify-center">
                    <span class="text-4xl font-bold text-accent/30">
                      {post.data.title.substring(0, 2).toUpperCase()}
                    </span>
                  </div>
                )}
                <div class="p-5">
                  <div class="flex items-center gap-2 mb-3">
                    <span class="px-2 py-0.5 text-xs font-medium bg-accent/10 text-accent rounded">
                      {post.data.category}
                    </span>
                    <span class="text-xs text-muted">
                      {formatDate(post.data.publishDate)}
                    </span>
                  </div>
                  <h3 class="text-lg font-bold text-heading mb-2 group-hover:text-accent transition-colors line-clamp-2">
                    {post.data.title}
                  </h3>
                  <p class="text-sm text-muted line-clamp-2 mb-3">
                    {post.data.description}
                  </p>
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-muted">
                      {getReadingTime(post.body || '')} min czytania
                    </span>
                    <span class="text-accent font-medium group-hover:translate-x-1 transition-transform">
                      →
                    </span>
                  </div>
                </div>
              </a>
            ))}
          </div>
        )}
      </section>
      
      <!-- Newsletter CTA -->
      <section class="mt-20 p-8 sm:p-12 bg-gradient-to-br from-emerald-500/10 to-sky-500/10 border border-accent/20 rounded-2xl text-center">
        <h2 class="text-2xl sm:text-3xl font-bold text-heading mb-4">
          Masz pytania o swoją stronę?
        </h2>
        <p class="text-muted mb-8 max-w-xl mx-auto">
          Skontaktuj się ze mną. Chętnie pomogę dobrać najlepsze rozwiązanie dla Twojego biznesu.
        </p>
        <a 
          href="/kontakt" 
          class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-emerald-500 to-sky-500 dark:from-neon-green dark:to-neon-blue text-dark-950 font-semibold rounded-xl hover:opacity-90 transition-opacity"
        >
          Bezpłatna konsultacja
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </section>
      
    </div>
  </main>
  <Footer />
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>